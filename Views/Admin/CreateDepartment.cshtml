@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-user-shield me-2"></i>Administration Console
            </h1>
            <p class="text-muted small mb-0">System overview and institutional management</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-primary shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-primary fw-bold x-small mb-1">Total Students</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TotalStudents</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                <i class="fas fa-user-graduate fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-success shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-success fw-bold x-small mb-1">Total Faculty</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TotalTeachers</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                <i class="fas fa-chalkboard-teacher fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-info shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-info fw-bold x-small mb-1">Active Courses</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TotalCourses</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                                <i class="fas fa-book fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-warning shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-warning text-dark fw-bold x-small mb-1">Departments</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TotalDepartments</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning text-dark">
                                <i class="fas fa-building fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-cogs me-2"></i>Management Hub
                    </h6>
                </div>
                <div class="card-body bg-light bg-opacity-50">
                    <div class="row g-3">
                        <div class="col-md-4 col-sm-6">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Admin" asp-action="Departments">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-warning bg-opacity-10 text-dark">
                                        <i class="fas fa-building fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Departments</span>
                                    <span class="text-muted x-small mt-1">Structure & Organization</span>
                                </div>
                            </a>
                        </div>
                        
                        <div class="col-md-4 col-sm-6">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Admin" asp-action="Students">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-primary bg-opacity-10 text-primary">
                                        <i class="fas fa-user-graduate fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Students</span>
                                    <span class="text-muted x-small mt-1">Enrollment & Records</span>
                                </div>
                            </a>
                        </div>
                        
                        <div class="col-md-4 col-sm-6">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Admin" asp-action="Teachers">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-success bg-opacity-10 text-success">
                                        <i class="fas fa-chalkboard-teacher fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Faculty</span>
                                    <span class="text-muted x-small mt-1">Staff Management</span>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Admin" asp-action="Courses">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-info bg-opacity-10 text-info">
                                        <i class="fas fa-book-open fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Courses</span>
                                    <span class="text-muted x-small mt-1">Curriculum & Classes</span>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Admin" asp-action="ManageTimetable">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-dark bg-opacity-10 text-dark">
                                        <i class="fas fa-calendar-alt fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Timetable</span>
                                    <span class="text-muted x-small mt-1">Scheduling</span>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Admin" asp-action="Reports">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-danger bg-opacity-10 text-danger">
                                        <i class="fas fa-chart-bar fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Reports</span>
                                    <span class="text-muted x-small mt-1">Analytics & Data</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-server me-2"></i>System Status
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <div class="mb-3 position-relative d-inline-block">
                             <div class="spinner-grow text-success opacity-50" style="width: 3rem; height: 3rem;" role="status"></div>
                             <i class="fas fa-check-circle fa-2x text-success position-absolute top-50 start-50 translate-middle"></i>
                        </div>
                        <h6 class="fw-bold text-dark">Operational</h6>
                        <p class="text-muted small mb-0">All systems functioning normally</p>
                    </div>
                    
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-database me-2 text-info"></i>Database</span>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">Connected</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-shield-alt me-2 text-primary"></i>Security</span>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">Active</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="fas fa-clock me-2 text-warning text-dark"></i>Last Backup</span>
                            <span class="text-muted">2 hours ago</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="alert alert-info border-0 shadow-sm d-flex" role="alert">
                <i class="fas fa-lightbulb fa-2x me-3 mt-1"></i>
                <div>
                    <h6 class="alert-heading fw-bold">Admin Tip</h6>
                    <p class="small mb-0">Use the <strong>Reports</strong> module to identify students with low attendance before the semester ends.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .action-tile { transition: transform 0.2s ease, box-shadow 0.2s ease; background: #fff; }
    .action-tile:hover { transform: translateY(-5px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.1) !important; z-index: 5; }
    .shadow-hover { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
</style>