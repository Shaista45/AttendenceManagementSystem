@model AttendenceManagementSystem.ViewModels.StudentDetailViewModel
@{
    ViewData["Title"] = "Student Detail";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-user-graduate me-2"></i>Student Profile
            </h1>
            <p class="text-muted small mb-0">Detailed attendance analysis and academic record</p>
        </div>
        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm shadow-sm bg-white">
            <i class="fas fa-arrow-left me-2"></i>Back to Summary
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-id-badge me-2"></i>Student Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <table class="table table-borderless table-sm mb-0">
                                <tr>
                                    <td class="text-muted small text-uppercase fw-bold" width="35%">Roll Number</td>
                                    <td class="fw-bold text-dark">@Model.RollNumber</td>
                                </tr>
                                <tr>
                                    <td class="text-muted small text-uppercase fw-bold">Full Name</td>
                                    <td class="fw-bold text-dark">@Model.FullName</td>
                                </tr>
                                <tr>
                                    <td class="text-muted small text-uppercase fw-bold">Email</td>
                                    <td class="text-dark">@Model.Email</td>
                                </tr>
                                <tr>
                                    <td class="text-muted small text-uppercase fw-bold">Phone</td>
                                    <td class="text-dark">@Model.PhoneNumber</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 border-start-md">
                            <table class="table table-borderless table-sm mb-0">
                                <tr>
                                    <td class="text-muted small text-uppercase fw-bold" width="35%">Department</td>
                                    <td class="fw-bold text-dark">@Model.DepartmentName</td>
                                </tr>
                                <tr>
                                    <td class="text-muted small text-uppercase fw-bold">Batch</td>
                                    <td class="text-dark">@Model.BatchYear</td>
                                </tr>
                                <tr>
                                    <td class="text-muted small text-uppercase fw-bold">Section</td>
                                    <td class="text-dark">@Model.SectionName</td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.CourseName))
                                {
                                    <tr>
                                        <td class="text-muted small text-uppercase fw-bold">Current Course</td>
                                        <td class="fw-bold text-primary">@Model.CourseCode</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
             @if (Model.CourseId.HasValue)
             {
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                        <h6 class="m-0 fw-bold text-primary">
                            <i class="fas fa-chart-pie me-2"></i>Overview
                        </h6>
                        <span class="badge bg-light text-dark border">
                            @Model.FromDate.ToString("MMM dd") - @Model.ToDate.ToString("MMM dd")
                        </span>
                    </div>
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                         <div class="mb-3">
                             <div class="display-4 fw-bold @(Model.AttendancePercentage >= 75 ? "text-success" : (Model.AttendancePercentage >= 65 ? "text-warning text-dark" : "text-danger"))">
                                 @Model.AttendancePercentage.ToString("F1")%
                             </div>
                             <small class="text-uppercase text-muted fw-bold x-small">Attendance Rate</small>
                         </div>
                         
                         <div class="progress mb-3" style="height: 6px;">
                             <div class="progress-bar @(Model.AttendancePercentage >= 75 ? "bg-success" : (Model.AttendancePercentage >= 65 ? "bg-warning" : "bg-danger"))" 
                                  role="progressbar" style="width: @Model.AttendancePercentage%"></div>
                         </div>
                         
                         <div class="d-flex justify-content-around mt-2">
                             <div>
                                 <div class="h5 fw-bold mb-0 text-success">@Model.PresentCount</div>
                                 <small class="text-muted x-small text-uppercase">Present</small>
                             </div>
                             <div class="vr"></div>
                             <div>
                                 <div class="h5 fw-bold mb-0 text-danger">@Model.AbsentCount</div>
                                 <small class="text-muted x-small text-uppercase">Absent</small>
                             </div>
                             <div class="vr"></div>
                             <div>
                                 <div class="h5 fw-bold mb-0 text-dark">@Model.TotalClasses</div>
                                 <small class="text-muted x-small text-uppercase">Total</small>
                             </div>
                         </div>
                    </div>
                </div>
             }
        </div>
    </div>

    @if (Model.CourseId.HasValue)
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold">
                    <i class="fas fa-history me-2"></i>Attendance Log
                </h6>
                <div class="d-none d-sm-block">
                    <span class="badge bg-white text-primary me-1"><i class="fas fa-check me-1"></i>Present</span>
                    <span class="badge bg-white text-danger me-1"><i class="fas fa-times me-1"></i>Absent</span>
                    <span class="badge bg-white text-warning text-dark"><i class="fas fa-clock me-1"></i>Late</span>
                </div>
            </div>
            
            <div class="card-body p-0">
                @if (Model.AttendanceHistory.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="historyTable">
                            <thead class="bg-light text-uppercase x-small text-muted">
                                <tr>
                                    <th class="ps-4">Date</th>
                                    <th>Day</th>
                                    <th>Course</th>
                                    <th class="text-center">Status</th>
                                    <th>Remarks</th>
                                    <th class="text-end pe-4">Recorded At</th>
                                </tr>
                            </thead>
                            <tbody class="border-top-0">
                                @foreach (var item in Model.AttendanceHistory)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold text-dark">@item.Date.ToString("MMM dd, yyyy")</td>
                                        <td class="text-muted small">@item.Date.ToString("dddd")</td>
                                        <td>
                                            <span class="badge bg-light text-dark border">@item.CourseCode</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge rounded-pill bg-@item.StatusColor text-uppercase px-3 py-2" style="width: 100px;">
                                                @if (item.Status == AttendenceManagementSystem.Models.AttendanceStatus.Present) { <i class="fas fa-check me-1"></i> }
                                                else if (item.Status == AttendenceManagementSystem.Models.AttendanceStatus.Absent) { <i class="fas fa-times me-1"></i> }
                                                else { <i class="fas fa-clock me-1"></i> }
                                                @item.StatusText
                                            </span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Remarks))
                                            {
                                                <span class="text-dark small"><i class="fas fa-comment-alt text-muted me-1"></i>@item.Remarks</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted x-small opacity-50">-</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4 text-muted small">
                                            @(item.MarkedAt.HasValue ? item.MarkedAt.Value.ToString("hh:mm tt") : "-")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-calendar-times fa-3x text-muted opacity-25"></i>
                        </div>
                        <h5 class="text-muted fw-bold">No Records Found</h5>
                        <p class="text-muted small mb-0">No attendance data available for the selected period.</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm border-0 d-flex align-items-center p-4">
            <i class="fas fa-info-circle fa-2x me-3"></i>
            <div>
                <h5 class="alert-heading fw-bold">No Course Selected</h5>
                <p class="mb-0">Please navigate back to the summary page and select a specific course to view detailed attendance logs.</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#historyTable').DataTable({
                "pageLength": 25,
                "order": [[0, "desc"]], // Sort by Date descending
                "dom": '<"d-flex justify-content-between align-items-center mx-3 my-3"f>t<"d-flex justify-content-between align-items-center mx-3 my-3"ip>',
                "language": {
                    "search": "",
                    "searchPlaceholder": "Search history..."
                }
            });
        });
    </script>
    <style>
        .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
        .border-start-md { border-left: 1px solid #e3e6f0; }
        /* Corrected Media Query with double @@ */
        @@media (max-width: 768px) { .border-start-md { border-left: none; border-top: 1px solid #e3e6f0; padding-top: 1rem; margin-top: 1rem; } }
        .dataTables_filter input { border-radius: 20px; padding: 5px 15px; border: 1px solid #d1d3e2; }
    </style>
}