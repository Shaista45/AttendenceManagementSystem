@model AttendenceManagementSystem.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-building me-2"></i>Delete Department</h1>
        <a class="btn btn-secondary" asp-action="Departments">Back to Departments</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <h5>Are you sure you want to delete this department?</h5>
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model?.Name</dd>

                <dt class="col-sm-3">Code</dt>
                <dd class="col-sm-9">@Model?.Code</dd>

                <dt class="col-sm-3">Batches</dt>
                <dd class="col-sm-9">@Model?.Batches?.Count ?? 0</dd>

                <dt class="col-sm-3">Courses</dt>
                <dd class="col-sm-9">@Model?.Courses?.Count ?? 0</dd>
            </dl>

            <form asp-action="DeleteDepartment" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-2"></i>Delete</button>
                <a class="btn btn-secondary ms-2" asp-action="Departments">Cancel</a>
            </form>
        </div>
    </div>
</div>
