@using System.Linq
@model AttendenceManagementSystem.Models.Batch
@{
    ViewData["Title"] = $"Batch {Model.Year} Details";
    var totalStudents = Model.Students?.Count ?? 0;
    var totalSections = Model.Sections?.Count ?? 0;
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Departments" class="text-decoration-none">Departments</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="EditDepartment" asp-route-id="@Model.DepartmentId" class="text-decoration-none">@Model.Department?.Code</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Batch @Model.Year</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-layer-group me-2"></i>Batch @Model.Year
            </h1>
            <p class="text-muted small mb-0">@Model.Department?.Name</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="EditBatch" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm">
                <i class="fas fa-edit me-2"></i>Edit Batch
            </a>
            <button class="btn btn-outline-danger shadow-sm" data-bs-toggle="modal" data-bs-target="#deleteBatchModal">
                <i class="fas fa-trash me-2"></i>Delete
            </button>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-4">
            <div class="card border-start border-4 border-primary shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase text-primary fw-bold x-small mb-1">Total Students</div>
                            <div class="h3 mb-0 fw-bold text-gray-800">@totalStudents</div>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                            <i class="fas fa-user-graduate fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card border-start border-4 border-success shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase text-success fw-bold x-small mb-1">Active Sections</div>
                            <div class="h3 mb-0 fw-bold text-gray-800">@totalSections</div>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                            <i class="fas fa-th-large fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card border-start border-4 border-info shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase text-info fw-bold x-small mb-1">Timetable Entries</div>
                            <div class="h3 mb-0 fw-bold text-gray-800">
                                @(Model.Timetables?.Count ?? 0)
                            </div>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom-0 pt-3 px-3">
            <ul class="nav nav-tabs card-header-tabs" id="batchTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active fw-bold" id="sections-tab" data-bs-toggle="tab" data-bs-target="#sections" type="button" role="tab">
                        <i class="fas fa-th-large me-2"></i>Sections
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link fw-bold" id="students-tab" data-bs-toggle="tab" data-bs-target="#students" type="button" role="tab">
                        <i class="fas fa-users me-2"></i>Students
                    </button>
                </li>
            </ul>
        </div>
        <div class="card-body bg-light bg-opacity-10">
            <div class="tab-content" id="batchTabsContent">
                
                <div class="tab-pane fade show active" id="sections" role="tabpanel">
                    
                    
                    @if (Model.Sections != null && Model.Sections.Any())
                    {
                        <div class="row g-3">
                            @foreach (var sec in Model.Sections.OrderBy(s => s.Name))
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-0 section-card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <div>
                                                    <h5 class="card-title fw-bold text-primary mb-1">Section @sec.Name</h5>
                                                    <small class="text-muted">ID: @sec.Id</small>
                                                </div>
                                                <div class="dropdown">
                                                    <button class="btn btn-light btn-sm rounded-circle" type="button" data-bs-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v text-muted"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end shadow">
                                                        <li><a class="dropdown-item" href="@Url.Action("Students", "Admin", new { batchId = Model.Id, sectionId = sec.Id })"><i class="fas fa-users me-2 text-info"></i>View Students</a></li>
                                                        <li><a class="dropdown-item" href="@Url.Action("ManageTimetable", "Admin", new { departmentId = Model.DepartmentId, batchId = Model.Id, sectionId = sec.Id })"><i class="fas fa-calendar-alt me-2 text-primary"></i>Timetable</a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form asp-action="DeleteSection" asp-controller="Admin" method="post" class="d-inline">
                                                                <input type="hidden" name="id" value="@sec.Id" />
                                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Delete Section @sec.Name? This will remove all students in this section.');">
                                                                    <i class="fas fa-trash me-2"></i>Delete
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="bg-light rounded p-2 me-3 text-center" style="min-width: 60px;">
                                                    <span class="d-block h5 mb-0 fw-bold">@(sec.Students?.Count ?? 0)</span>
                                                    <small class="d-block x-small text-muted text-uppercase">Students</small>
                                                </div>
                                                <div class="vr mx-2"></div>
                                                <div class="ms-2">
                                                    <small class="d-block text-muted">Created</small>
                                                    <span class="small fw-bold">@sec.CreatedAt.ToString("MMM dd, yyyy")</span>
                                                </div>
                                            </div>
                                            
                                            <div class="d-grid">
                                                <a href="@Url.Action("Students", "Admin", new { batchId = Model.Id, sectionId = sec.Id })" class="btn btn-outline-primary btn-sm">
                                                    Manage Students
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 bg-white rounded shadow-sm border">
                            <i class="fas fa-th-large fa-3x text-muted mb-3 opacity-50"></i>
                            <h6 class="text-muted">No sections found</h6>
                            <button class="btn btn-link text-decoration-none" onclick="loadQuickAddSection()">Create First Section</button>
                        </div>
                    }
                </div>

                <div class="tab-pane fade" id="students" role="tabpanel">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold text-dark mb-0">Enrolled Students</h5>
                        <a href="@Url.Action("CreateStudent", "Admin")" class="btn btn-sm btn-primary">
                            <i class="fas fa-user-plus me-1"></i> Add Student
                        </a>
                    </div>

                    @if (Model.Students != null && Model.Students.Any())
                    {
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0" id="studentsTable">
                                        <thead class="bg-light text-muted x-small text-uppercase">
                                            <tr>
                                                <th class="ps-4">Roll Number</th>
                                                <th>Name</th>
                                                <th>Section</th>
                                                <th>Contact</th>
                                                <th class="text-end pe-4">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in Model.Students.OrderBy(s => s.RollNumber))
                                            {
                                                <tr>
                                                    <td class="ps-4 font-monospace fw-bold text-primary">@student.RollNumber</td>
                                                    <td class="fw-bold text-dark">@student.FullName</td>
                                                    <td><span class="badge bg-light text-dark border">@student.Section?.Name</span></td>
                                                    <td class="small text-muted">@student.Email</td>
                                                    <td class="text-end pe-4">
                                                        <a href="@Url.Action("StudentDetails", "Admin", new { id = student.Id })" class="btn btn-sm btn-light border">
                                                            <i class="fas fa-eye text-info"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 bg-white rounded shadow-sm border">
                            <i class="fas fa-user-graduate fa-3x text-muted mb-3 opacity-50"></i>
                            <h6 class="text-muted">No students enrolled yet</h6>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="quickAddSectionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Section to Batch @Model.Year</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="quickAddSectionBody">
                </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteBatchModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Delete Batch</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="fw-bold">Are you sure you want to delete Batch @Model.Year?</p>
                <div class="alert alert-warning border-0 d-flex">
                    <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                    <div>
                        <strong>Warning:</strong> This will permanently delete:
                        <ul class="mb-0 mt-1 small">
                            <li>All @totalSections sections in this batch</li>
                            <li>All @totalStudents students enrolled in this batch</li>
                            <li>All associated timetables and attendance records</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteBatch" asp-controller="Admin" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable if library is present
            if($.fn.DataTable) {
                $('#studentsTable').DataTable({
                    "pageLength": 10,
                    "lengthChange": false,
                    "dom": '<"d-flex justify-content-between align-items-center mx-3 my-3"f>t<"d-flex justify-content-between align-items-center mx-3 my-3"p>',
                    "language": { "search": "", "searchPlaceholder": "Search students..." }
                });
            }
        });

        function loadQuickAddSection() {
            var deptId = @Model.DepartmentId;
            var batchId = @Model.Id;
            
            $.ajax({
                url: '@Url.Action("QuickAddSection", "Admin")',
                type: 'GET',
                data: { departmentId: deptId },
                success: function(response) {
                    $('#quickAddSectionBody').html(response);
                    
                    // Auto-select this batch and disable the dropdown
                    var batchSelect = $('#quickAddSectionBody').find('select[name="batchId"]');
                    if(batchSelect.length > 0) {
                        batchSelect.val(batchId);
                        batchSelect.prop('disabled', true);
                        $('<input>').attr({
                            type: 'hidden',
                            name: 'batchId',
                            value: batchId
                        }).appendTo('#quickAddSectionBody form');
                    }
                    
                    // Add save handler for section
                    $('#saveSectionBtn').off('click').on('click', function() {
                        var form = $('#addSectionForm'); // Ensure ID matches partial
                        if(form.length === 0) form = $('#quickAddSectionBody form');
                        
                        $.post(form.attr('action'), form.serialize(), function(res) {
                            if(res.success) {
                                location.reload();
                            } else {
                                alert('Error: ' + res.message);
                            }
                        });
                    });

                    new bootstrap.Modal(document.getElementById('quickAddSectionModal')).show();
                },
                error: function() {
                    alert('Error loading form.');
                }
            });
        }
    </script>
    <style>
        .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
        .section-card { transition: transform 0.2s; }
        .section-card:hover { transform: translateY(-5px); border-color: var(--uet-royal-blue) !important; }
        .dataTables_filter input { border-radius: 20px; padding: 5px 15px; border: 1px solid #d1d3e2; }
    </style>
}