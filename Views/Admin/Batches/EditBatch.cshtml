@using System.Linq
@model AttendenceManagementSystem.Models.Batch
@{
    ViewData["Title"] = "Edit Batch";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit me-2"></i>Edit Batch
        </h1>
        <a class="btn btn-outline-secondary btn-sm shadow-sm" asp-action="EditDepartment" asp-route-id="@Model.DepartmentId">
            <i class="fas fa-arrow-left me-2"></i>Back to Department
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 font-weight-bold text-primary">Batch Information</h6>
                </div>
                <div class="card-body">
                    <div id="batchFormAlert"></div>

                    <form asp-action="EditBatch" method="post" id="editBatchForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="DepartmentId" />
                        
                        <div class="mb-3">
                            <label asp-for="Year" class="form-label fw-bold">Batch Year <span class="text-danger">*</span></label>
                            <input asp-for="Year" class="form-control" placeholder="Enter batch year (e.g., 2023)" maxlength="4" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                            <small class="form-text text-muted">Enter the year this batch started (e.g., 2023)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter batch description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Information
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Batch ID:</strong> @Model.Id</p>
                    <p class="mb-2"><strong>Department:</strong> @Model.Department?.Name</p>
                    <p class="mb-2"><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    <hr />
                    <p class="text-muted small mb-0">
                        <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                        Editing the batch details will update records for all associated sections and students.
                    </p>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>Quick Stats
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-layer-group text-primary me-2"></i>Sections:</span>
                        <span class="badge bg-light text-dark border">@(Model.Sections?.Count ?? 0)</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span><i class="fas fa-user-graduate text-success me-2"></i>Students:</span>
                        <span class="badge bg-light text-dark border">@(Model.Students?.Count ?? 0)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white">
                    <div>
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-layer-group me-2"></i>Manage Sections
                        </h6>
                        <small class="text-muted">Batch @Model.Year</small>
                    </div>
                    <span class="badge bg-primary">
                        @(Model.Sections?.Count ?? 0) section@(Model.Sections?.Count == 1 ? string.Empty : "s")
                    </span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-lg-4">
                            <div class="bg-light border rounded p-3 h-100">
                                <h6 class="fw-bold mb-3 text-success">
                                    <i class="fas fa-plus-circle me-2"></i>Add New Section
                                </h6>
                                <p class="text-muted x-small mb-3">
                                    Create a new section (e.g., A, B1).
                                </p>
                                
                                <div id="sectionFormAlert"></div>

                                <form asp-action="CreateSection" method="post" id="createSectionForm">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="BatchId" value="@Model.Id" />
                                    <div class="mb-3">
                                        <label class="form-label small fw-bold">Section Name <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white"><i class="fas fa-tag text-muted"></i></span>
                                            <input type="text" name="Name" class="form-control" placeholder="e.g. A" maxlength="10" required />
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100 shadow-sm" id="addSectionBtn">
                                        <i class="fas fa-plus me-2"></i>Add Section
                                    </button>
                                </form>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <h6 class="fw-bold mb-3 text-primary border-bottom pb-2">
                                <i class="fas fa-list-ul me-2"></i>Existing Sections
                            </h6>
                            @{
                                var orderedSections = Model.Sections?.OrderBy(s => s.Name).ToList();
                            }
                            @if (orderedSections != null && orderedSections.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0 border">
                                        <thead class="bg-light">
                                            <tr>
                                                <th class="ps-3">Section</th>
                                                <th class="text-center">Students</th>
                                                <th class="text-end pe-3">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var sec in orderedSections)
                                            {
                                                <tr>
                                                    <td class="ps-3 fw-bold">@sec.Name</td>
                                                    <td class="text-center">
                                                        <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                                                            @(sec.Students?.Count ?? 0)
                                                        </span>
                                                    </td>
                                                    <td class="text-end pe-3">
                                                        <div class="btn-group shadow-sm">
                                                            <a asp-action="EditSection" asp-route-id="@sec.Id" class="btn btn-sm btn-light border" title="Edit">
                                                                <i class="fas fa-edit text-primary"></i>
                                                            </a>
                                                            <button type="button" 
                                                                    class="btn btn-sm btn-light border delete-section"
                                                                    data-section-id="@sec.Id"
                                                                    data-section-name="@sec.Name">
                                                                <i class="fas fa-trash text-danger"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5 border rounded bg-light bg-opacity-25">
                                    <i class="fas fa-layer-group fa-2x mb-3 opacity-50"></i>
                                    <p class="mb-0 small">No sections found. Use the form to create one.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-3 mb-5 pt-3 border-top">
        <button type="button" class="btn btn-light px-4 border" onclick="window.history.back();">
            Cancel
        </button>
        <button type="submit" form="editBatchForm" class="btn btn-primary px-4 shadow-sm fw-bold" id="saveBatchBtn">
            <i class="fas fa-save me-2"></i>Save Changes
        </button>
    </div>

</div>

<div class="modal fade" id="deleteSectionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Delete Section</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Are you sure you want to delete <strong id="sectionDeleteName"></strong>?</p>
                <div class="alert alert-warning mb-0 small">
                    <i class="fas fa-exclamation-circle me-2"></i>This will remove all students linked to this section.
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteSection">
                    <i class="fas fa-trash me-2"></i>Delete Section
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Fix modal z-index by moving it to body
            $('#deleteSectionModal').appendTo("body");

            // Helper function to show alerts
            function showMessage(containerId, message, isSuccess) {
                var colorClass = isSuccess ? 'alert-success' : 'alert-danger';
                var icon = isSuccess ? 'fa-check-circle' : 'fa-exclamation-circle';
                var html = `
                    <div class="alert ${colorClass} alert-dismissible fade show" role="alert">
                        <i class="fas ${icon} me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>`;
                $('#' + containerId).html(html);
                
                // Auto dismiss success messages after 3 seconds
                if(isSuccess) {
                    setTimeout(function() {
                        $('#' + containerId).find('.alert').fadeOut();
                    }, 3000);
                }
            }

            // ==========================
            // 1. EDIT BATCH AJAX
            // ==========================
            $('#editBatchForm').on('submit', function(e) {
                e.preventDefault();
                var form = $(this);
                var btn = $('#saveBatchBtn');
                var originalBtnText = btn.html();

                if (!form.valid()) return;

                // Disable button but NO SPINNER as requested
                btn.prop('disabled', true).text('Saving...');

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        btn.prop('disabled', false).html(originalBtnText);
                        
                        if (response.success) {
                            showMessage('batchFormAlert', response.message || 'Batch saved successfully!', true);
                        } else {
                            var errorMsg = response.message || 'Update failed.';
                            if(response.errors && response.errors.length > 0) {
                                errorMsg += '<br/>' + response.errors.join('<br/>');
                            }
                            showMessage('batchFormAlert', errorMsg, false);
                        }
                    },
                    error: function() {
                        btn.prop('disabled', false).html(originalBtnText);
                        showMessage('batchFormAlert', 'Server connection error. Please try again.', false);
                    }
                });
            });

            // ==========================
            // 2. CREATE SECTION AJAX
            // ==========================
            $('#createSectionForm').on('submit', function(e) {
                e.preventDefault();
                var form = $(this);
                var btn = $('#addSectionBtn');
                var originalBtnText = btn.html();

                if (!form.valid()) return;

                // Disable button but NO SPINNER
                btn.prop('disabled', true).text('Adding...');

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        if (response.success) {
                            // Show success then reload
                            showMessage('sectionFormAlert', 'Section added! Reloading...', true);
                            setTimeout(function() {
                                location.reload();
                            }, 500);
                        } else {
                            btn.prop('disabled', false).html(originalBtnText);
                            showMessage('sectionFormAlert', response.message || 'Could not add section.', false);
                        }
                    },
                    error: function() {
                        btn.prop('disabled', false).html(originalBtnText);
                        showMessage('sectionFormAlert', 'Server connection error.', false);
                    }
                });
            });

            // ==========================
            // 3. DELETE SECTION LOGIC
            // ==========================
            let sectionToDelete = null;

            $(document).on('click', '.delete-section', function() {
                sectionToDelete = $(this).data('section-id');
                const sectionName = $(this).data('section-name');
                $('#sectionDeleteName').text('Section ' + sectionName);
                new bootstrap.Modal(document.getElementById('deleteSectionModal')).show();
            });

            $('#confirmDeleteSection').on('click', function() {
                if (!sectionToDelete) return;
                
                var btn = $(this);
                btn.prop('disabled', true).text('Deleting...');

                $.ajax({
                    url: '@Url.Action("DeleteSection", "Admin")',
                    type: 'POST',
                    data: { id: sectionToDelete },
                    success: function(response) {
                        if (response && response.success) {
                            location.reload();
                        } else {
                            alert(response.message || 'Unable to delete section.');
                            btn.prop('disabled', false).html('Delete Section');
                        }
                    },
                    error: function() {
                        alert('Error deleting section.');
                        btn.prop('disabled', false).html('Delete Section');
                    }
                });
            });
        });
    </script>
    <style>
        .x-small { font-size: 0.75rem; }
    </style>
}