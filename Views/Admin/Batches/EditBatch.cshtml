@using System.Linq
@model AttendenceManagementSystem.Models.Batch
@{
    ViewData["Title"] = "Edit Batch";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit me-2"></i>Edit Batch
        </h1>
        <a class="btn btn-secondary" asp-action="EditDepartments">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Batch Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="EditBatch" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />
                        
                        <div class="mb-3">
                            <label asp-for="Year" class="form-label">Batch Year <span class="text-danger">*</span></label>
                            <input asp-for="Year" class="form-control" placeholder="Enter batch year (e.g., 2023)" maxlength="4" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                            <small class="form-text text-muted">Enter the year this batch started (e.g., 2023)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartmentId" class="form-label">Department <span class="text-danger">*</span></label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter batch description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="form-text text-muted">Optional: Additional details about this batch</small>
                        </div>

                        
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Information
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Batch ID:</strong> @Model.Id</p>
                    <p class="mb-2"><strong>Department:</strong> @Model.Department?.Name</p>
                    <p class="mb-2"><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    <hr />
                    <p class="text-muted mb-0">
                        <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                        Editing the batch will affect all associated sections and students.
                    </p>
                </div>
            </div>

            @if (Model.Sections != null || Model.Students != null)
            {
                <div class="card shadow mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-chart-bar me-2"></i>Quick Stats
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <i class="fas fa-layer-group text-primary me-2"></i>
                            <strong>Sections:</strong> @(Model.Sections?.Count ?? 0)
                        </div>
                        <div class="mb-0">
                            <i class="fas fa-user-graduate text-warning me-2"></i>
                            <strong>Students:</strong> @(Model.Students?.Count ?? 0)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-layer-group me-2"></i>Manage Sections
                        </h6>
                        <small class="text-muted">Batch @Model.Year</small>
                    </div>
                    <span class="badge bg-primary">
                        @(Model.Sections?.Count ?? 0) section@(Model.Sections?.Count == 1 ? string.Empty : "s")
                    </span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-lg-5">
                            <div class="border rounded p-3 h-100">
                                <h6 class="fw-bold mb-3">
                                    <i class="fas fa-plus-circle me-2 text-success"></i>Add New Section
                                </h6>
                                <p class="text-muted small mb-4">
                                    Create a new section that belongs to this batch. Section names should be short (e.g., A, B1).
                                </p>
                                <form asp-action="CreateSection" method="post" class="needs-validation" novalidate>
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="BatchId" value="@Model.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Section Name <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                            <input type="text" name="Name" class="form-control" placeholder="e.g., A" maxlength="10" required />
                                        </div>
                                        <div class="form-text">Max 10 characters.</div>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-plus me-2"></i>Add Section
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <h6 class="fw-bold mb-3 d-flex align-items-center">
                                <i class="fas fa-list-ul me-2 text-primary"></i>Existing Sections
                            </h6>
                            @{
                                var orderedSections = Model.Sections?.OrderBy(s => s.Name).ToList();
                            }
                            @if (orderedSections != null && orderedSections.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Section</th>
                                                <th>Students</th>
                                                <th>Created</th>
                                                <th class="text-end">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var section in orderedSections)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>Section @(section.Name)</strong>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">
                                                            @(section.Students?.Count ?? 0)
                                                        </span>
                                                    </td>
                                                    <td>@(section.CreatedAt.ToString("MMM dd, yyyy"))</td>
                                                    <td class="text-end">
                                                        <div class="btn-group">
                                                            <a asp-action="EditSection" asp-route-id="@(section.Id)" class="btn btn-sm btn-outline-primary" title="Edit Section">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <button type="button"
                                                                    class="btn btn-sm btn-outline-danger delete-section"
                                                                    data-section-id="@(section.Id)"
                                                                    data-section-name="@(section.Name)"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#deleteSectionModal"
                                                                    title="Delete Section">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5 border rounded">
                                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                                    <p class="mb-0">No sections found for this batch. Use the form on the left to create one.</p>
                                </div>
                            }
                        </div>
                    </div>
                <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a class="btn btn-secondary" asp-action="Departments">
                                Cancel
                            </a>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Section Confirmation Modal -->
<div class="modal fade" id="deleteSectionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Delete Section</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="sectionDeleteName"></strong>?</p>
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-info-circle me-2"></i>This will remove all students linked to this section from the batch relationship.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteSection">Delete Section</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            let sectionToDelete = null;

            $('#deleteSectionModal').on('show.bs.modal', function (event) {
                const trigger = $(event.relatedTarget);
                sectionToDelete = trigger?.data('section-id') ?? null;
                const sectionName = trigger?.data('section-name') ?? '';
                $('#sectionDeleteName').text(`Section ${sectionName}`);
            });

            $('#deleteSectionModal').on('hidden.bs.modal', function () {
                sectionToDelete = null;
                $('#sectionDeleteName').text('');
            });

            // Delete section via AJAX to keep the administrator on the edit page.
            $('#confirmDeleteSection').on('click', function () {
                if (!sectionToDelete) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("DeleteSection", "Admin")',
                    type: 'POST',
                    data: { id: sectionToDelete },
                    success: function (response) {
                        if (response?.success) {
                            location.reload();
                        } else {
                            alert(response?.message ?? 'Unable to delete section.');
                        }
                    },
                    error: function () {
                        alert('Error deleting section.');
                    }
                });
            });
        });
    </script>
}
