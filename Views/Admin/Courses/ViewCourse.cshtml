@model AttendenceManagementSystem.Models.Course
@{
    ViewData["Title"] = "Course Details";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-info">
                <i class="fas fa-book-open me-2"></i>Course Profile
            </h1>
            <p class="text-muted small mb-0">Detailed course information and enrollment data</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary shadow-sm" asp-action="EditCourse" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-2"></i>Edit Course
            </a>
            <a class="btn btn-outline-secondary shadow-sm" asp-action="Courses">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>Course Information
                    </h6>
                </div>
                <div class="card-body bg-light bg-opacity-50">
                    <div class="mb-3 pb-3 border-bottom">
                        <label class="text-muted small fw-bold mb-1">Course Code</label>
                        <div class="h5 mb-0">
                            <span class="badge bg-info bg-opacity-10 text-info border border-info px-3 py-2">@Model.Code</span>
                        </div>
                    </div>
                    <div class="mb-3 pb-3 border-bottom">
                        <label class="text-muted small fw-bold mb-1">Course Title</label>
                        <div class="h5 mb-0 text-dark">@Model.Title</div>
                    </div>
                    <div class="mb-3 pb-3 border-bottom">
                        <label class="text-muted small fw-bold mb-1">Credit Hours</label>
                        <div class="text-dark">
                            <span class="badge bg-primary rounded-pill px-3 py-2">@Model.Credits Credits</span>
                        </div>
                    </div>
                    <div class="mb-3 pb-3 border-bottom">
                        <label class="text-muted small fw-bold mb-1">Department</label>
                        <div class="text-dark">
                            <span class="badge bg-warning bg-opacity-10 text-dark border border-warning px-3 py-2">@Model.Department?.Name</span>
                        </div>
                    </div>
                    <div class="mb-0">
                        <label class="text-muted small fw-bold mb-1">Description</label>
                        <div class="text-dark">@(Model.Description ?? "No description available")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-success">
                        <i class="fas fa-chart-bar me-2"></i>Enrollment Statistics
                    </h6>
                </div>
                <div class="card-body bg-light bg-opacity-50">
                    <div class="text-center py-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-4 mb-3">
                            <i class="fas fa-users fa-3x text-success"></i>
                        </div>
                        <div class="h2 fw-bold text-dark mb-2">@(Model.Enrollments?.Count() ?? 0)</div>
                        <div class="text-muted">Total Students Enrolled</div>
                    </div>
                    <div class="alert alert-info border-0 shadow-sm mt-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-info bg-opacity-10 p-2 rounded-circle text-info me-3">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="small">
                                <strong>Course Capacity</strong>
                                <div class="text-muted">Students can enroll based on their batch and section assignments</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3 border-bottom">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-list-ul me-2"></i>Enrolled Students
            </h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase x-small text-muted">
                        <tr>
                            <th class="ps-4">Roll Number</th>
                            <th>Student Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @if (Model.Enrollments != null && Model.Enrollments.Any())
                        {
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="badge bg-primary bg-opacity-10 text-primary">@enrollment.Student?.RollNumber</span>
                                    </td>
                                    <td class="fw-bold text-dark">@enrollment.Student?.FullName</td>
                                    <td class="text-muted">
                                        <i class="fas fa-envelope me-2"></i>@enrollment.Student?.Email
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="fas fa-inbox fa-3x mb-3 d-block opacity-25"></i>
                                        <p>No students enrolled in this course yet.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
