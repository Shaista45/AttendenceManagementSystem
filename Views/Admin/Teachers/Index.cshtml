@model List<AttendenceManagementSystem.ViewModels.TeacherViewModel>

@{
    ViewData["Title"] = "Manage Teachers";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-chalkboard-teacher me-2"></i>Manage Teachers
        </h2>
        <div>
            <a asp-action="CreateTeacher" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Teacher
            </a>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Employee ID</th>
                                <th>Department</th>
                                <th>Assigned Courses</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@teacher.FullName</strong>
                                    </td>
                                    <td>@teacher.Email</td>
                                    <td>@(teacher.EmployeeId ?? "N/A")</td>
                                    <td>@teacher.DepartmentName</td>
                                    <td>
                                        <span class="badge bg-info">
                                            @teacher.AssignedCoursesCount @(teacher.AssignedCoursesCount == 1 ? "Course" : "Courses")
                                        </span>
                                    </td>
                                    <td>
                                        @if (teacher.IsApproved)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Approved
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Pending
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="TeacherDetails" asp-route-id="@teacher.Id" 
                                               class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            <a asp-action="EditTeacherInfo" asp-route-id="@teacher.Id" 
                                               class="btn btn-sm btn-primary" title="Edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            @if (!teacher.IsApproved)
                                            {
                                                <form asp-action="ApproveTeacher" asp-route-id="@teacher.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success" 
                                                            title="Approve Teacher"
                                                            onclick="return confirm('Approve @teacher.FullName? This will allow them to log in.');">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="DisableTeacher" asp-route-id="@teacher.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-sm @(teacher.IsActive ? "btn-warning" : "btn-success")" 
                                                        title="@(teacher.IsActive ? "Disable" : "Enable")"
                                                        onclick="return confirm('@(teacher.IsActive ? "Disable" : "Enable") @teacher.FullName?');">
                                                    <i class="fas fa-@(teacher.IsActive ? "ban" : "check-circle")"></i> @(teacher.IsActive ? "Disable" : "Enable")
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No teachers found. Click "Add Teacher" to create one.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>
