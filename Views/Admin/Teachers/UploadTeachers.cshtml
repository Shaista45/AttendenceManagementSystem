@{
    ViewData["Title"] = "Upload Teachers";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-chalkboard-teacher me-2"></i>Upload Teachers
            </h1>
            <p class="text-muted small mb-0">Bulk register faculty members via Excel</p>
        </div>
        <a class="btn btn-outline-secondary btn-sm shadow-sm bg-white" asp-action="Teachers">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-success border-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle fa-2x me-3 text-success"></i>
                <div>@TempData["Message"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["UploadErrors"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-start border-danger border-4" role="alert">
            <div class="d-flex">
                <i class="fas fa-exclamation-triangle fa-2x me-3 text-danger mt-1"></i>
                <div>
                    <h6 class="alert-heading fw-bold">Upload Failed</h6>
                    <div class="small text-danger">@Html.Raw(TempData["UploadErrors"])</div>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-xl-8">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header bg-primary text-white py-3">
                    <h6 class="m-0 fw-bold"><i class="fas fa-cloud-upload-alt me-2"></i>File Upload</h6>
                </div>
                <div class="card-body p-5 bg-light bg-opacity-10">
                    <form asp-action="UploadTeachers" method="post" enctype="multipart/form-data" id="uploadForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label for="departmentId" class="form-label fw-bold text-dark small text-uppercase">
                                Target Department <span class="text-danger">*</span>
                            </label>
                            <select name="departmentId" id="departmentId" class="form-select form-select-lg shadow-sm" required>
                                <option value="">-- Select Department --</option>
                                @foreach (var dept in (SelectList)ViewBag.Departments)
                                {
                                    <option value="@dept.Value">@dept.Text</option>
                                }
                            </select>
                            <div class="form-text small"><i class="fas fa-info-circle me-1"></i>All teachers in the file will be assigned to this department.</div>
                        </div>

                        <input type="file" id="file" name="file" accept=".xlsx,.xls" class="d-none" />

                        <div class="upload-zone text-center p-5 border-2 border-dashed rounded-3 bg-white position-relative transition-all" 
                             id="dropZone" style="border-color: #e3e6f0; cursor: pointer;">
                            
                            <div class="mb-3">
                                <span class="fa-stack fa-2x">
                                    <i class="fas fa-circle fa-stack-2x text-primary opacity-10"></i>
                                    <i class="fas fa-file-excel fa-stack-1x text-primary"></i>
                                </span>
                            </div>
                            <h5 class="fw-bold text-dark mb-1">Drag & Drop Excel file here</h5>
                            <p class="text-muted small mb-0">or click to browse (.xlsx, .xls)</p>
                        </div>

                        <div id="fileInfo" class="mt-4 text-center d-none fade-in">
                            <div class="d-inline-flex align-items-center bg-white border px-4 py-2 rounded-pill shadow-sm">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <span class="fw-bold text-dark me-2" id="fileName">filename.xlsx</span>
                                <button type="button" class="btn btn-link btn-sm text-danger p-0 ms-2" id="clearFile" title="Remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <div id="uploadProgress" class="progress mt-4 mb-2" style="height: 8px; display: none;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" style="width: 100%"></div>
                        </div>
                        <div id="progressText" class="text-center small text-muted mt-1" style="display: none;">Processing records...</div>

                        <div class="text-center mt-4 pt-3">
                            <button class="btn btn-success px-5 py-2 shadow-sm fw-bold" type="submit" id="uploadBtn" disabled>
                                <i class="fas fa-upload me-2"></i>Start Import
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-download me-2"></i>Template
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-3">Download the pre-formatted Excel template to ensure your data matches the required structure.</p>
                    <a asp-action="DownloadTeacherTemplate" class="btn btn-outline-primary w-100 border-2 fw-bold">
                        <i class="fas fa-file-download me-2"></i>Download .xlsx
                    </a>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-list-ul me-2"></i>Guidelines
                    </h6>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item px-4 py-3">
                            <div class="fw-bold text-dark mb-1">Row 1: Headers</div>
                            <span class="text-muted">The first row is skipped. Data starts from Row 2.</span>
                        </li>
                        <li class="list-group-item px-4 py-3">
                            <div class="fw-bold text-dark mb-1">Required Columns</div>
                            <div class="text-muted">
                                1. Full Name<br>
                                2. Email (Unique)<br>
                                3. Employee ID (Unique)<br>
                                4. Phone<br>
                                5. Password (Min 6 chars)
                            </div>
                        </li>
                        <li class="list-group-item px-4 py-3 bg-light text-muted">
                            <i class="fas fa-info-circle me-1"></i> Teachers will be created with <strong>Pending Approval</strong> status.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var dropZone = $('#dropZone');
            var fileInput = $('#file');
            var uploadBtn = $('#uploadBtn');
            var fileInfo = $('#fileInfo');
            var fileNameDisplay = $('#fileName');
            var deptSelect = $('#departmentId');

            // 1. TRIGGER BROWSE
            dropZone.on('click', function() {
                fileInput.trigger('click');
            });

            // 2. FILE SELECTED (Browse)
            fileInput.on('change', function() {
                handleFileSelection(this.files);
            });

            // 3. DEPARTMENT CHANGED
            deptSelect.on('change', function() {
                validateForm();
            });

            // 4. DRAG & DROP EVENTS
            dropZone.on('dragover dragenter', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).addClass('bg-primary bg-opacity-10 border-primary');
            });

            dropZone.on('dragleave dragend drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).removeClass('bg-primary bg-opacity-10 border-primary');
            });

            dropZone.on('drop', function(e) {
                var files = e.originalEvent.dataTransfer.files;
                // Assign to hidden input
                fileInput[0].files = files; 
                handleFileSelection(files);
            });

            // COMMON FILE HANDLER
            function handleFileSelection(files) {
                if (files.length > 0) {
                    var file = files[0];
                    
                    if (!file.name.match(/\.(xlsx|xls)$/i)) {
                        alert('Only .xlsx or .xls files are allowed.');
                        resetFile();
                        return;
                    }

                    fileNameDisplay.text(file.name);
                    fileInfo.removeClass('d-none');
                    dropZone.addClass('border-success bg-light');
                    validateForm();
                } else {
                    resetFile();
                }
            }

            // VALIDATION LOGIC (Checks both File AND Department)
            function validateForm() {
                var hasFile = fileInput[0].files.length > 0;
                var hasDept = deptSelect.val() !== "";

                if (hasFile && hasDept) {
                    uploadBtn.prop('disabled', false);
                    uploadBtn.removeAttr('disabled');
                } else {
                    uploadBtn.prop('disabled', true);
                }
            }

            // RESET
            $('#clearFile').on('click', function(e) {
                e.stopPropagation();
                resetFile();
            });

            function resetFile() {
                fileInput.val('');
                fileInfo.addClass('d-none');
                dropZone.removeClass('border-success bg-light');
                validateForm();
            }

            // SUBMIT HANDLER
            $('#uploadForm').on('submit', function() {
                if (fileInput[0].files.length === 0 || deptSelect.val() === "") {
                    alert('Please select a department and a valid file.');
                    return false;
                }
                
                $('#uploadProgress').show();
                $('#progressText').show();
                uploadBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Uploading...');
            });
        });
    </script>
    <style>
        .upload-zone { transition: all 0.2s ease-in-out; }
        .upload-zone:hover { border-color: var(--bs-primary) !important; background-color: rgba(13, 110, 253, 0.02); }
        .border-dashed { border-style: dashed !important; }
        .fade-in { animation: fadeIn 0.3s ease-in; }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}