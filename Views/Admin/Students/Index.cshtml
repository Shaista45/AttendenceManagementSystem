@model IEnumerable<AttendenceManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-user-graduate me-2"></i>Student Management
            </h1>
            <p class="text-muted small mb-0">Manage student enrollment and academic records</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="CreateStudent" class="btn btn-primary shadow-sm">
                <i class="fas fa-user-plus me-2"></i>Add Student
            </a>
            <a asp-action="UploadStudents" class="btn btn-success shadow-sm text-white">
                <i class="fas fa-file-excel me-2"></i>Import Excel
            </a>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-4 border-success" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2 fa-lg"></i>
                <span>@TempData["Message"]</span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-start border-4 border-danger" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-2 fa-lg"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light bg-opacity-50 py-3">
            <form method="get" asp-action="Students" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Department</label>
                        <select name="departmentId" 
                                class="form-select border-0 shadow-sm" 
                                asp-items="@(ViewData["Departments"] as SelectList)"
                                onchange="document.getElementById('batchFilter').value=''; document.getElementById('sectionFilter').value=''; this.form.submit()">
                            <option value="">All Departments</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label small text-muted text-uppercase fw-bold">Session (Batch)</label>
                        <select name="batchId" id="batchFilter"
                                class="form-select border-0 shadow-sm" 
                                asp-items="@(ViewData["Batches"] as SelectList)"
                                onchange="document.getElementById('sectionFilter').value=''; this.form.submit()">
                            <option value="">All Batches</option>
                        </select>
                    </div>

                    

                    <div class="col-md-4">
                        <label class="form-label small text-muted text-uppercase fw-bold">Search</label>
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" name="search" value="@(ViewBag.CurrentSearch ?? "")" 
                                   class="form-control border-start-0 ps-0" 
                                   placeholder="Search by name, roll number, or email" />
                            <button type="submit" class="btn btn-primary shadow-sm">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="col-md-auto">
                        <a asp-action="Students" class="btn btn-light border shadow-sm" title="Reset All Filters">
                            <i class="fas fa-undo text-muted"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-list-ul me-2"></i>Student Directory
            </h6>
            <span class="badge bg-light text-primary border">@Model.Count() Students</span>
        </div>
        
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase x-small text-muted">
                            <tr>
                                <th class="ps-4">Student Info</th>
                                <th>Contact</th>
                                <th>Department</th>
                                <th class="text-center">Batch</th>
                                <th class="text-center">Section</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <span class="fw-bold">@student.FullName.Substring(0, 1).ToUpper()</span>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@student.FullName</div>
                                                <small class="text-muted">Roll: @student.RollNumber</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column small">
                                            <span class="text-dark"><i class="fas fa-envelope text-muted me-2"></i>@student.Email</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@student.Department?.Name</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 rounded-pill px-3">
                                            @student.Batch?.Year
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill px-3">
                                            @student.Section?.Name
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="StudentDetails" asp-route-id="@student.Id" 
                                               class="btn btn-sm btn-light border" title="View Profile">
                                                <i class="fas fa-eye text-primary"></i>
                                            </a>
                                            <a asp-action="EditStudent" asp-route-id="@student.Id" 
                                               class="btn btn-sm btn-light border" title="Edit Profile">
                                                <i class="fas fa-edit text-info"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-light border delete-student" 
                                                    data-id="@student.Id" data-name="@student.FullName" 
                                                    title="Delete Record">
                                                <i class="fas fa-trash text-danger"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <span class="bg-light p-3 rounded-circle text-muted">
                            <i class="fas fa-user-graduate fa-3x opacity-50"></i>
                        </span>
                    </div>
                    <h6 class="text-muted fw-bold">No Students Found</h6>
                    
                    @if (ViewBag.CurrentBatchId != null || ViewBag.CurrentSectionId != null || !string.IsNullOrEmpty(ViewBag.CurrentSearch))
                    {
                        <p class="text-muted small mb-3">No students match the current filters.</p>
                        <a asp-action="Students" class="btn btn-sm btn-primary">
                            <i class="fas fa-sync-alt me-1"></i> Clear Filters & View All
                        </a>
                    }
                    else
                    {
                        <p class="text-muted small mb-3">Get started by adding a new student or importing a list.</p>
                        <a asp-action="CreateStudent" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus me-1"></i> Add First Student
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<form id="deleteForm" method="post" action="@Url.Action("DeleteStudent", "Admin")">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" />
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Delete student functionality
            $('.delete-student').on('click', function() {
                var studentId = $(this).data('id');
                var studentName = $(this).data('name');
                
                if (confirm('Are you sure you want to delete student "' + studentName + '"? This action cannot be undone.')) {
                    // Use the hidden form for CSRF protection
                    var form = $('#deleteForm');
                    $('#deleteId').val(studentId);
                    
                    $.ajax({
                        url: form.attr('action'),
                        type: 'POST',
                        data: form.serialize(),
                        success: function(response) {
                            if (response.success === true || response === true) {
                                location.reload();
                            } else {
                                alert(response.message || 'Error deleting student.');
                            }
                        },
                        error: function() {
                            alert('An error occurred while communicating with the server.');
                        }
                    });
                }
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    <style>
        .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
        .form-select:focus, .form-control:focus { border-color: var(--uet-royal-blue); box-shadow: 0 0 0 0.2rem rgba(0,0,102,0.15); }
    </style>
}