@model IEnumerable<AttendenceManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-user-graduate me-2"></i>Student Directory
            </h1>
            <p class="text-muted small mb-0">Manage student enrollment and academic records</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="CreateStudent" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-2"></i>Add Student
            </a>
            <a asp-action="UploadStudents" class="btn btn-success shadow-sm text-white">
                <i class="fas fa-file-excel me-2"></i>Import Excel
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light bg-opacity-50 py-3">
            <form method="get" asp-action="Students" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label small text-muted text-uppercase fw-bold">Session (Batch)</label>
                        <select name="batchId" 
                                class="form-select border-0 shadow-sm" 
                                asp-items="@(ViewData["Batches"] as SelectList)"
                                onchange="document.getElementById('sectionFilter').value=''; this.form.submit()">
                            <option value="">All Batches</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label small text-muted text-uppercase fw-bold">Section</label>
                        <select name="sectionId" id="sectionFilter"
                                class="form-select border-0 shadow-sm" 
                                asp-items="@(ViewData["Sections"] as SelectList)"
                                onchange="this.form.submit()">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <!--  filter by department button -->
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Department</label>
                        <select name="departmentId" 
                                class="form-select border-0 shadow-sm" 
                                asp-items="@(ViewData["Departments"] as SelectList)"
                                onchange="this.form.submit()">
                            <option value="">All Departments</option>
                        </select>
                    </div>

                     <!-- when any name , roll number, or e mail is entered the related student should be shown other wise print message that student not found -->

                    <div class="col-md-4">
                        <label class="form-label small text-muted text-uppercase fw-bold">Search</label>
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text" name="search" value="@(ViewBag.CurrentSearch ?? "")" 
                                   class="form-control border-start-0 ps-0" 
                                   placeholder="Search by name, roll number, or email" />
                            <button type="submit" class="btn btn-primary shadow-sm">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="col-md-auto">
                        <a asp-action="Students" class="btn btn-light border shadow-sm" title="Reset All Filters">
                            <i class="fas fa-undo text-muted"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase x-small text-muted">
                            <tr>
                                <th class="ps-4">Roll Number</th>
                                <th>Full Name</th>
                                <th>Contact</th>
                                <th>Department</th>
                                <th>Batch</th>
                                <th>Section</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="font-monospace fw-bold text-primary bg-primary bg-opacity-10 px-2 py-1 rounded small">
                                            @student.RollNumber
                                        </span>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark">@student.FullName</div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column small">
                                            <span class="text-muted"><i class="fas fa-envelope me-1"></i>@student.Email</span>
                                        </div>
                                    </td>
                                    <td>@student.Department?.Name</td>
                                    <td><span class="badge bg-light text-dark border">@student.Batch?.Year</span></td>
                                    <td><span class="badge bg-light text-dark border">@student.Section?.Name</span></td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm">
                                            <a class="btn btn-sm btn-light border" asp-action="StudentDetails" asp-route-id="@student.Id" 
                                               data-bs-toggle="tooltip" title="View Profile">
                                                <i class="fas fa-eye text-primary"></i>
                                            </a>
                                            <a class="btn btn-sm btn-light border" asp-action="EditStudent" asp-route-id="@student.Id" 
                                               data-bs-toggle="tooltip" title="Edit Info">
                                                <i class="fas fa-edit text-warning"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-light border delete-student" 
                                                    data-id="@student.Id" data-name="@student.FullName" 
                                                    data-bs-toggle="tooltip" title="Delete Record">
                                                <i class="fas fa-trash text-danger"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <span class="bg-light p-4 rounded-circle text-muted d-inline-block">
                            <i class="fas fa-search fa-3x opacity-50"></i>
                        </span>
                    </div>
                    <h5 class="text-muted fw-bold">No Results Found</h5>
                    
                    @if (ViewBag.CurrentBatchId != null || ViewBag.CurrentSectionId != null || !string.IsNullOrEmpty(ViewBag.CurrentSearch))
                    {
                        <div class="alert alert-warning d-inline-block mt-2 px-4 shadow-sm">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            No students match the current filters:
                            <ul class="mb-0 text-start mt-1 small">
                                @if(ViewBag.CurrentBatchId != null) { <li>Selected Batch</li> }
                                @if(ViewBag.CurrentSectionId != null) { <li>Selected Section</li> }
                                @if(!string.IsNullOrEmpty(ViewBag.CurrentSearch)) { <li>Search term: "<strong>@ViewBag.CurrentSearch</strong>"</li> }
                            </ul>
                        </div>
                        <div class="mt-3">
                            <a asp-action="Students" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-sync-alt me-1"></i> Clear Filters & View All
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small">No students have been added to the system yet.</p>
                        <a asp-action="CreateStudent" class="btn btn-primary btn-sm mt-2">
                            <i class="fas fa-plus me-1"></i> Add First Student
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<form id="deleteForm" method="post" action="@Url.Action("DeleteStudent", "Admin")">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" />
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Delete student functionality
            $('.delete-student').on('click', function() {
                var studentId = $(this).data('id');
                var studentName = $(this).data('name');
                
                if (confirm('Are you sure you want to delete student "' + studentName + '"? This action cannot be undone.')) {
                    // Use the hidden form for CSRF protection
                    var form = $('#deleteForm');
                    $('#deleteId').val(studentId);
                    
                    $.ajax({
                        url: form.attr('action'),
                        type: 'POST',
                        data: form.serialize(),
                        success: function(response) {
                            if (response.success === true || response === true) {
                                location.reload();
                            } else {
                                alert(response.message || 'Error deleting student.');
                            }
                        },
                        error: function() {
                            alert('An error occurred while communicating with the server.');
                        }
                    });
                }
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    <style>
        .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
        .form-select:focus, .form-control:focus { border-color: var(--uet-royal-blue); box-shadow: 0 0 0 0.2rem rgba(0,0,102,0.15); }
    </style>
}