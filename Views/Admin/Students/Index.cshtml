@model IEnumerable<AttendenceManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-user-graduate me-2"></i>Student Directory
            </h1>
            <p class="text-muted small mb-0">Manage student enrollment and academic records</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="CreateStudent" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-2"></i>Add Student
            </a>
            <a asp-action="UploadStudents" class="btn btn-success shadow-sm text-white">
                <i class="fas fa-file-excel me-2"></i>Import Excel
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light bg-opacity-50 py-3">
            <form method="get" asp-action="Students" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small text-muted text-uppercase fw-bold">Session (Batch)</label>
                    <select name="batchId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Batches" onchange="this.form.submit()">
                        <option value="">All Batches</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted text-uppercase fw-bold">Section</label>
                    <select name="sectionId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Sections" onchange="this.form.submit()">
                        <option value="">All Sections</option>
                    </select>
                </div>

                <div class="col-md-4 ms-auto">
                    <label class="form-label small text-muted text-uppercase fw-bold">Search</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-white border-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control border-0" placeholder="Name or Roll Number..." id="searchInput">
                    </div>
                </div>
                
                <div class="col-md-auto">
                    <a asp-action="Students" class="btn btn-light border shadow-sm" title="Reset Filters">
                        <i class="fas fa-undo text-muted"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="dataTable">
                        <thead class="bg-light text-uppercase x-small text-muted">
                            <tr>
                                <th class="ps-4">Roll Number</th>
                                <th>Full Name</th>
                                <th>Contact</th>
                                <th>Department</th>
                                <th>Batch</th>
                                <th>Section</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="font-monospace fw-bold text-primary bg-primary bg-opacity-10 px-2 py-1 rounded small">
                                            @student.RollNumber
                                        </span>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark">@student.FullName</div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column small">
                                            <span class="text-muted"><i class="fas fa-envelope me-1"></i>@student.Email</span>
                                        </div>
                                    </td>
                                    <td>@student.Department?.Name</td>
                                    <td><span class="badge bg-light text-dark border">@student.Batch?.Year</span></td>
                                    <td><span class="badge bg-light text-dark border">@student.Section?.Name</span></td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm">
                                            <a class="btn btn-sm btn-light border" asp-action="StudentDetails" asp-route-id="@student.Id" 
                                               data-bs-toggle="tooltip" title="View Profile">
                                                <i class="fas fa-eye text-primary"></i>
                                            </a>
                                            <a class="btn btn-sm btn-light border" asp-action="EditStudent" asp-route-id="@student.Id" 
                                               data-bs-toggle="tooltip" title="Edit Info">
                                                <i class="fas fa-edit text-warning"></i>
                                            </a>
                                            <a class="btn btn-sm btn-light border" asp-controller="Student" asp-action="RegisterSubjects" asp-route-id="@student.Id" 
                                               data-bs-toggle="tooltip" title="Register Subjects">
                                                <i class="fas fa-book text-info"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-light border delete-student" 
                                                    data-id="@student.Id" data-name="@student.FullName" 
                                                    data-bs-toggle="tooltip" title="Delete Record">
                                                <i class="fas fa-trash text-danger"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <span class="bg-light p-4 rounded-circle text-muted d-inline-block">
                            <i class="fas fa-user-graduate fa-3x opacity-50"></i>
                        </span>
                    </div>
                    <h5 class="text-muted fw-bold">No Students Found</h5>
                    <p class="text-muted small mb-4">Try adjusting your filters or add a new student.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#dataTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Delete student functionality
            $('.delete-student').on('click', function() {
                var studentId = $(this).data('id');
                var studentName = $(this).data('name');
                var btn = $(this);
                
                if (confirm('Are you sure you want to delete student "' + studentName + '"? This action cannot be undone.')) {
                    $.ajax({
                        url: '@Url.Action("DeleteStudent", "Admin")',
                        type: 'POST',
                        data: {
                            id: studentId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success === true || response === true) {
                                btn.closest('tr').fadeOut(300, function() { $(this).remove(); });
                            } else {
                                alert(response.message || 'Student deleted successfully.');
                                location.reload();
                            }
                        },
                        error: function() {
                            alert('An error occurred while deleting the student.');
                        }
                    });
                }
            });
        });
    </script>
    <style>
        .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
        .form-select:focus, .form-control:focus { border-color: var(--uet-royal-blue); box-shadow: 0 0 0 0.2rem rgba(0,0,102,0.15); }
    </style>
}