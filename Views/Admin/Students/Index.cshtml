@model IEnumerable<AttendenceManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users me-2"></i>Students
        </h1>
        <div class="btn-group">
            <a class="btn btn-primary" asp-action="CreateStudent">
                <i class="fas fa-plus me-2"></i>Add Student
            </a>
            <a class="btn btn-success" asp-action="UploadStudents">
                <i class="fas fa-upload me-2"></i>Upload Excel
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">All Students</h6>
            <div class="form-group mb-0">
                <input type="text" class="form-control form-control-sm" placeholder="Search students..." id="searchInput">
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>Roll Number</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Batch</th>
                                <th>Section</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@student.RollNumber</strong>
                                    </td>
                                    <td>@student.FullName</td>
                                    <td>@student.Email</td>
                                    <td>@student.Department?.Name</td>
                                    <td>@student.Batch?.Year</td>
                                    <td>@student.Section?.Name</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a class="btn btn-outline-info" href="#">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a class="btn btn-outline-warning" href="#">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-outline-danger" href="#">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No Students Found</h5>
                    <p class="text-muted">Add students manually or upload via Excel.</p>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="CreateStudent">
                            <i class="fas fa-plus me-2"></i>Add Student
                        </a>
                        <a class="btn btn-success" asp-action="UploadStudents">
                            <i class="fas fa-upload me-2"></i>Upload Excel
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#dataTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}