@model AttendenceManagementSystem.ViewModels.DailyAttendanceReportPageViewModel
@{
    ViewData["Title"] = "Daily Attendance Report";
}

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    @@media print {
        .btn, .card-header { display: none !important; }
        .card { border: 1px solid #dee2e6 !important; }
    }
</style>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-calendar-check me-2"></i>Daily Attendance Report
            </h1>
            <p class="text-muted small mb-0">Track daily attendance records across all classes</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-filter me-2"></i>Report Filters
            </h6>
        </div>
        <div class="card-body bg-light bg-opacity-50">
            <form method="get" asp-action="DailyAttendanceReport">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-dark">Course</label>
                        <select name="CourseId" class="form-select shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-dark">Section</label>
                        <select name="SectionId" class="form-select shadow-sm" asp-items="ViewBag.Sections">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold small text-dark">Start Date</label>
                        <input type="date" name="StartDate" class="form-control shadow-sm" value="@Model.Filters.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold small text-dark">End Date</label>
                        <input type="date" name="EndDate" class="form-control shadow-sm" value="@Model.Filters.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary shadow-sm">
                            <i class="fas fa-search me-2"></i>Apply
                        </button>
                        <a asp-action="DailyAttendanceReport" class="btn btn-outline-secondary shadow-sm">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.DailyRecords.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Daily Attendance Records
                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill">@Model.DailyRecords.Count Classes</span>
                </h6>
                <div>
                    <button onclick="window.print()" class="btn btn-outline-primary btn-sm shadow-sm">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Date</th>
                                <th class="fw-bold">Course</th>
                                <th class="fw-bold">Section</th>
                                <th class="fw-bold">Teacher</th>
                                <th class="text-center fw-bold">Total Students</th>
                                <th class="text-center fw-bold">Present</th>
                                <th class="text-center fw-bold">Absent</th>
                                <th class="text-center fw-bold">Attendance %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.DailyRecords)
                            {
                                <tr>
                                    <td>@record.Date.ToString("dd MMM yyyy")</td>
                                    <td>@record.CourseName</td>
                                    <td>@record.Section</td>
                                    <td>@record.TeacherName</td>
                                    <td class="text-center">@record.TotalStudents</td>
                                    <td class="text-center">
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill">@record.PresentCount</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@record.AbsentCount</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="@(record.AttendancePercentage >= 75 ? "text-success" : "text-danger")">
                                            @record.AttendancePercentage.ToString("0.00")%
                                        </strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@Model.DailyRecords.Count</h3>
                        <p class="mb-0">Total Classes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.DailyRecords.Sum(r => r.TotalStudents)</h3>
                        <p class="mb-0">Total Attendance</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.DailyRecords.Sum(r => r.PresentCount)</h3>
                        <p class="mb-0">Total Present</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.DailyRecords.Sum(r => r.AbsentCount)</h3>
                        <p class="mb-0">Total Absent</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>No attendance records found. Please adjust your filters and try again.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>
</div>
