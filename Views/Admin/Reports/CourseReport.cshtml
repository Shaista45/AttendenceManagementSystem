@model AttendenceManagementSystem.ViewModels.CourseReportPageViewModel
@{
    ViewData["Title"] = "Course-wise Report";
}

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    .print-header {
        display: none;
    }
    @@media print {
        .no-print { display: none !important; }
        .card { border: none !important; box-shadow: none !important; }
        .card-header { background: white !important; border: none !important; padding: 0 !important; }
        .card-body { padding: 0 !important; background: white !important; }
        .print-header {
            display: block !important;
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #000;
        }
        .print-header h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .print-header p {
            font-size: 14px;
            margin: 5px 0;
        }
        .table { font-size: 12px; }
        .badge { border: 1px solid #000 !important; }
    }
</style>

<script>
    function setMonthlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), now.getMonth(), 1);
        var lastDay = new Date(now.getFullYear(), now.getMonth() + 1, 0);
        document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
        document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
    }
    
    function setYearlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), 0, 1);
        var lastDay = new Date(now.getFullYear(), 11, 31);
        document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
        document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
    }
    
    function setLastSemester() {
        var now = new Date();
        var month = now.getMonth();
        if (month >= 0 && month <= 5) {
            // If Jan-June, last semester is Aug-Dec of previous year
            var start = new Date(now.getFullYear() - 1, 7, 1);
            var end = new Date(now.getFullYear() - 1, 11, 31);
        } else {
            // If Jul-Dec, last semester is Jan-June of current year
            var start = new Date(now.getFullYear(), 0, 1);
            var end = new Date(now.getFullYear(), 5, 30);
        }
        document.getElementById('startDate').value = start.toISOString().split('T')[0];
        document.getElementById('endDate').value = end.toISOString().split('T')[0];
    }
    
    function setCurrentSemester() {
        var now = new Date();
        var month = now.getMonth();
        if (month >= 0 && month <= 5) {
            // Jan-June semester
            var start = new Date(now.getFullYear(), 0, 1);
            var end = new Date(now.getFullYear(), 5, 30);
        } else {
            // Aug-Dec semester
            var start = new Date(now.getFullYear(), 7, 1);
            var end = new Date(now.getFullYear(), 11, 31);
        }
        document.getElementById('startDate').value = start.toISOString().split('T')[0];
        document.getElementById('endDate').value = end.toISOString().split('T')[0];
    }
</script>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3 no-print">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-book me-2"></i>Course-wise Attendance Report
            </h1>
            <p class="text-muted small mb-0">Comprehensive attendance statistics for each course</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Print Header (visible only when printing) -->
    <div class="print-header">
        <h2>Course-wise Attendance Report</h2>
        @if (!string.IsNullOrEmpty(ViewBag.SelectedDepartment as string))
        {
            <p><strong>Department:</strong> @ViewBag.SelectedDepartment</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedBatch as string))
        {
            <p><strong>Session:</strong> @ViewBag.SelectedBatch</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedSection as string))
        {
            <p><strong>Section:</strong> @ViewBag.SelectedSection</p>
        }
        @if (Model.Filters.StartDate.HasValue || Model.Filters.EndDate.HasValue)
        {
            <p><strong>Period:</strong> 
                @if (Model.Filters.StartDate.HasValue) { @Model.Filters.StartDate.Value.ToString("dd MMM yyyy") } 
                @if (Model.Filters.StartDate.HasValue && Model.Filters.EndDate.HasValue) { <text> to </text> }
                @if (Model.Filters.EndDate.HasValue) { @Model.Filters.EndDate.Value.ToString("dd MMM yyyy") }
            </p>
        }
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4 no-print">
        <div class="card-body bg-light bg-opacity-50 py-3">
            <form method="get" asp-action="CourseReport" id="reportForm">
                <!-- Quick Period Selection -->
                <div class="row g-2 mb-3">
                    <div class="col-12">
                        <label class="form-label small text-muted text-uppercase fw-bold mb-2">Quick Period Selection</label>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" onclick="setMonthlyPeriod()">Current Month</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setYearlyPeriod()">Current Year</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setLastSemester()">Last Semester</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setCurrentSemester()">Current Semester</button>
                        </div>
                    </div>
                </div>

                <div class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Department</label>
                        <select name="DepartmentId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Departments">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Course</label>
                        <select name="CourseId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Start Date</label>
                        <input type="date" name="StartDate" id="startDate" class="form-control border-0 shadow-sm" value="@Model.Filters.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">End Date</label>
                        <input type="date" name="EndDate" id="endDate" class="form-control border-0 shadow-sm" value="@Model.Filters.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary shadow-sm w-100">
                            <i class="fas fa-search me-1"></i>Apply
                        </button>
                    </div>
                    <div class="col-md-auto">
                        <a asp-action="CourseReport" class="btn btn-light border shadow-sm" title="Reset Filters">
                            <i class="fas fa-undo text-muted"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.Courses.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Course Statistics
                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill">@Model.Courses.Count Courses</span>
                </h6>
                <div class="no-print">
                    <button onclick="window.print()" class="btn btn-outline-primary btn-sm shadow-sm">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Course Code</th>
                                <th class="fw-bold">Course Title</th>
                                <th class="fw-bold">Department</th>
                                <th class="text-center fw-bold">Total Lectures</th>
                                <th class="text-center fw-bold">Total Students</th>
                                <th class="text-center fw-bold">Average Attendance</th>
                                <th class="text-center fw-bold">Defaulters</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.Courses)
                            {
                                <tr>
                                    <td>@course.CourseCode</td>
                                    <td>@course.CourseTitle</td>
                                    <td>@course.Department</td>
                                    <td class="text-center">
                                        <span class="badge bg-info bg-opacity-10 text-info rounded-pill">@course.TotalLectures</span>
                                    </td>
                                    <td class="text-center">@course.TotalStudents</td>
                                    <td class="text-center">
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(course.AverageAttendance >= 75 ? "bg-success" : "bg-danger")" 
                                                 role="progressbar" 
                                                 style="width: @course.AverageAttendance%"
                                                 aria-valuenow="@course.AverageAttendance" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                <strong>@course.AverageAttendance.ToString("0.00")%</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (course.NumberOfDefaulters > 0)
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@course.NumberOfDefaulters</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">0</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.Courses.Count</h3>
                        <p class="mb-0">Total Courses</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.Courses.Sum(c => c.TotalLectures)</h3>
                        <p class="mb-0">Total Lectures</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@(Model.Courses.Any() ? Model.Courses.Average(c => c.AverageAttendance).ToString("0.00") : "0")%</h3>
                        <p class="mb-0">Overall Average</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.Courses.Sum(c => c.NumberOfDefaulters)</h3>
                        <p class="mb-0">Total Defaulters</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>No course records found. Please adjust your filters and try again.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>
</div>
