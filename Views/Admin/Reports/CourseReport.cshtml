@model AttendenceManagementSystem.ViewModels.CourseReportPageViewModel
@{
    ViewData["Title"] = "Course-wise Report";
}

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    @@media print {
        .btn, .card-header { display: none !important; }
        .card { border: 1px solid #dee2e6 !important; }
    }
</style>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-book me-2"></i>Course-wise Attendance Report
            </h1>
            <p class="text-muted small mb-0">Comprehensive attendance statistics for each course</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-filter me-2"></i>Report Filters
            </h6>
        </div>
        <div class="card-body bg-light bg-opacity-50">
            <form method="get" asp-action="CourseReport">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-dark">Department</label>
                        <select name="DepartmentId" class="form-select shadow-sm" asp-items="ViewBag.Departments">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-dark">Course</label>
                        <select name="CourseId" class="form-select shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-dark">Start Date</label>
                        <input type="date" name="StartDate" class="form-control shadow-sm" value="@Model.Filters.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-dark">End Date</label>
                        <input type="date" name="EndDate" class="form-control shadow-sm" value="@Model.Filters.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary shadow-sm me-2 gap-2">
                            <i class="fas fa-search me-2"></i>Apply Filters
                        </button>
                        <a asp-action="CourseReport" class="btn btn-outline-secondary shadow-sm gap-2">
                            <i class="fas fa-times me-2"></i>Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.Courses.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Course Statistics
                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill">@Model.Courses.Count Courses</span>
                </h6>
                <div>
                    <button onclick="window.print()" class="btn btn-outline-primary btn-sm shadow-sm">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Course Code</th>
                                <th class="fw-bold">Course Title</th>
                                <th class="fw-bold">Department</th>
                                <th class="text-center fw-bold">Total Lectures</th>
                                <th class="text-center fw-bold">Total Students</th>
                                <th class="text-center fw-bold">Average Attendance</th>
                                <th class="text-center fw-bold">Defaulters</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.Courses)
                            {
                                <tr>
                                    <td>@course.CourseCode</td>
                                    <td>@course.CourseTitle</td>
                                    <td>@course.Department</td>
                                    <td class="text-center">
                                        <span class="badge bg-info bg-opacity-10 text-info rounded-pill">@course.TotalLectures</span>
                                    </td>
                                    <td class="text-center">@course.TotalStudents</td>
                                    <td class="text-center">
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(course.AverageAttendance >= 75 ? "bg-success" : "bg-danger")" 
                                                 role="progressbar" 
                                                 style="width: @course.AverageAttendance%"
                                                 aria-valuenow="@course.AverageAttendance" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                <strong>@course.AverageAttendance.ToString("0.00")%</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (course.NumberOfDefaulters > 0)
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@course.NumberOfDefaulters</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">0</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.Courses.Count</h3>
                        <p class="mb-0">Total Courses</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.Courses.Sum(c => c.TotalLectures)</h3>
                        <p class="mb-0">Total Lectures</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@(Model.Courses.Any() ? Model.Courses.Average(c => c.AverageAttendance).ToString("0.00") : "0")%</h3>
                        <p class="mb-0">Overall Average</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.Courses.Sum(c => c.NumberOfDefaulters)</h3>
                        <p class="mb-0">Total Defaulters</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>No course records found. Please adjust your filters and try again.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>
</div>
