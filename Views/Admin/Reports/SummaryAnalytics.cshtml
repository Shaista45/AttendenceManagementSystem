@model AttendenceManagementSystem.ViewModels.SummaryAnalyticsViewModel
@{
    ViewData["Title"] = "Summary Analytics";
}

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    @@media print {
        .btn, .card-header { display: none !important; }
        .card { border: 1px solid #dee2e6 !important; }
    }
</style>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-chart-line me-2"></i>Summary Analytics Dashboard
            </h1>
            <p class="text-muted small mb-0">Comprehensive overview of attendance management system</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Overall Statistics -->
    <div class="row mb-4">
        <div class="col-12 mb-3">
            <h5 class="fw-bold text-gray-800"><i class="fas fa-chart-bar me-2"></i>Overall Statistics</h5>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 border-start border-primary border-4">
                <div class="card-body text-center">
                    <i class="fas fa-users fs-1 text-primary mb-2"></i>
                    <h3 class="mt-2 text-primary">@Model.TotalStudents</h3>
                    <p class="mb-0 text-muted small">Total Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 border-start border-info border-4">
                <div class="card-body text-center">
                    <i class="fas fa-chalkboard-teacher fs-1 text-info mb-2"></i>
                    <h3 class="mt-2 text-info">@Model.TotalTeachers</h3>
                    <p class="mb-0 text-muted small">Total Teachers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 border-start border-success border-4">
                <div class="card-body text-center">
                    <i class="fas fa-book fs-1 text-success mb-2"></i>
                    <h3 class="mt-2 text-success">@Model.TotalCourses</h3>
                    <p class="mb-0 text-muted small">Total Courses</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 border-start border-warning border-4">
                <div class="card-body text-center">
                    <i class="fas fa-building fs-1 text-warning mb-2"></i>
                    <h3 class="mt-2 text-warning">@Model.TotalDepartments</h3>
                    <p class="mb-0 text-muted small">Total Departments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Statistics -->
    <div class="row mb-4">
        <div class="col-12 mb-3">
            <h5 class="fw-bold text-gray-800"><i class="fas fa-clipboard-check me-2"></i>Attendance Statistics</h5>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.OverallAttendancePercentage.ToString("0.00")%</h3>
                    <p class="mb-2 text-muted small">Overall Attendance</p>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.OverallAttendancePercentage%" aria-valuenow="@Model.OverallAttendancePercentage" aria-valuemin="0" aria-valuemax="100">
                            @Model.OverallAttendancePercentage.ToString("0.00")%
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h3 class="text-primary">@Model.TotalClassesConducted</h3>
                    <p class="mb-0 text-muted small">Total Classes Conducted</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.TotalAttendanceMarked</h3>
                    <p class="mb-0 text-muted small">Attendance Records</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Student Performance -->
    <div class="row mb-4">
        <div class="col-12 mb-3">
            <h5 class="fw-bold text-gray-800"><i class="fas fa-trophy me-2"></i>Student Performance Distribution</h5>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 border-start border-success border-4">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fs-1 text-success mb-2"></i>
                    <h3 class="mt-2 text-success">@Model.StudentsAbove75Percent</h3>
                    <p class="mb-0 text-muted small">Students Above 75%</p>
                    <small class="text-muted x-small">Excellent Attendance</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 border-start border-warning border-4">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-circle fs-1 text-warning mb-2"></i>
                    <h3 class="mt-2 text-warning">@Model.StudentsBelow75Percent</h3>
                    <p class="mb-0 text-muted small">Students 50-75%</p>
                    <small class="text-muted x-small">Need Improvement</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 border-start border-danger border-4">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle fs-1 text-danger mb-2"></i>
                    <h3 class="mt-2 text-danger">@Model.StudentsBelow50Percent</h3>
                    <p class="mb-0 text-muted small">Students Below 50%</p>
                    <small class="text-muted x-small">Critical</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Department-wise Statistics -->
    @if (Model.DepartmentStats.Any())
    {
        <div class="row mb-4">
            <div class="col-12 mb-3">
                <h5 class="fw-bold text-gray-800"><i class="fas fa-building me-2"></i>Department-wise Performance</h5>
            </div>
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h6 class="m-0 fw-bold text-primary">
                            <i class="fas fa-table me-2"></i>Department Statistics
                        </h6>
                    </div>
                    <div class="card-body bg-light bg-opacity-50">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="fw-bold">Department</th>
                                        <th class="text-center fw-bold">Student Count</th>
                                        <th class="text-center fw-bold">Average Attendance</th>
                                        <th class="fw-bold">Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dept in Model.DepartmentStats.OrderByDescending(d => d.AverageAttendance))
                                    {
                                        <tr>
                                            <td><strong>@dept.DepartmentName</strong></td>
                                            <td class="text-center">
                                                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">@dept.StudentCount</span>
                                            </td>
                                            <td class="text-center">
                                                <strong class="@(dept.AverageAttendance >= 75 ? "text-success" : "text-danger")">
                                                    @dept.AverageAttendance.ToString("0.00")%
                                                </strong>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar @(dept.AverageAttendance >= 75 ? "bg-success" : dept.AverageAttendance >= 50 ? "bg-warning" : "bg-danger")" 
                                                         role="progressbar" 
                                                         style="width: @dept.AverageAttendance%"
                                                         aria-valuenow="@dept.AverageAttendance" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="100">
                                                        @dept.AverageAttendance.ToString("0.00")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Activity -->
    <div class="row mb-4">
        <div class="col-12 mb-3">
            <h5 class="fw-bold text-gray-800"><i class="fas fa-clock me-2"></i>Recent Activity</h5>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="card-title text-muted small">Last Attendance Date</h6>
                    <p class="card-text h4 mb-0">
                        @if (Model.LastAttendanceDate.HasValue)
                        {
                            @Model.LastAttendanceDate.Value.ToString("dd MMM yyyy")
                        }
                        else
                        {
                            <span class="text-muted">No records</span>
                        }
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="card-title text-muted small">Today's Classes</h6>
                    <p class="card-text h4 text-primary mb-0">@Model.TodayClasses</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm bg-light border-0">
                <div class="card-body">
                    <h6 class="mb-3 fw-bold text-gray-800"><i class="fas fa-cog me-2"></i>Quick Actions</h6>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="StudentAttendanceReport" class="btn btn-primary shadow-sm">
                            <i class="fas fa-user-check me-2"></i>Student Report
                        </a>
                        <a asp-action="LowAttendanceReport" class="btn btn-danger shadow-sm">
                            <i class="fas fa-exclamation-triangle me-2"></i>Defaulters
                        </a>
                        <a asp-action="CourseReport" class="btn btn-success shadow-sm">
                            <i class="fas fa-book me-2"></i>Course Report
                        </a>
                        <a asp-action="TeacherReport" class="btn btn-info shadow-sm">
                            <i class="fas fa-chalkboard-teacher me-2"></i>Teacher Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
        <button onclick="window.print()" class="btn btn-outline-primary shadow-sm">
            <i class="fas fa-print me-2"></i>Print Summary
        </button>
    </div>
</div>
