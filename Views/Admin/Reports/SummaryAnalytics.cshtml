@model AttendenceManagementSystem.ViewModels.SummaryAnalyticsViewModel
@{
    ViewData["Title"] = "Summary Analytics";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-bar-chart"></i> Summary Analytics Dashboard
            </h2>
            <p class="text-muted">Comprehensive overview of attendance management system</p>
        </div>
    </div>

    <!-- Overall Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-graph-up"></i> Overall Statistics</h4>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <i class="bi bi-people fs-1 text-primary"></i>
                    <h3 class="mt-2 text-primary">@Model.TotalStudents</h3>
                    <p class="mb-0">Total Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-info">
                <div class="card-body">
                    <i class="bi bi-person-badge fs-1 text-info"></i>
                    <h3 class="mt-2 text-info">@Model.TotalTeachers</h3>
                    <p class="mb-0">Total Teachers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <i class="bi bi-book fs-1 text-success"></i>
                    <h3 class="mt-2 text-success">@Model.TotalCourses</h3>
                    <p class="mb-0">Total Courses</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <i class="bi bi-building fs-1 text-warning"></i>
                    <h3 class="mt-2 text-warning">@Model.TotalDepartments</h3>
                    <p class="mb-0">Total Departments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-clipboard-check"></i> Attendance Statistics</h4>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.OverallAttendancePercentage.ToString("0.00")%</h3>
                    <p class="mb-0">Overall Attendance</p>
                    <div class="progress mt-2" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.OverallAttendancePercentage%" aria-valuenow="@Model.OverallAttendancePercentage" aria-valuemin="0" aria-valuemax="100">
                            @Model.OverallAttendancePercentage.ToString("0.00")%
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-primary">@Model.TotalClassesConducted</h3>
                    <p class="mb-0">Total Classes Conducted</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.TotalAttendanceMarked</h3>
                    <p class="mb-0">Attendance Records</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Student Performance -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-trophy"></i> Student Performance Distribution</h4>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <h3 class="mt-2 text-success">@Model.StudentsAbove75Percent</h3>
                    <p class="mb-0">Students Above 75%</p>
                    <small class="text-muted">Excellent Attendance</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-circle fs-1 text-warning"></i>
                    <h3 class="mt-2 text-warning">@Model.StudentsBelow75Percent</h3>
                    <p class="mb-0">Students 50-75%</p>
                    <small class="text-muted">Need Improvement</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <i class="bi bi-x-circle fs-1 text-danger"></i>
                    <h3 class="mt-2 text-danger">@Model.StudentsBelow50Percent</h3>
                    <p class="mb-0">Students Below 50%</p>
                    <small class="text-muted">Critical</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Department-wise Statistics -->
    @if (Model.DepartmentStats.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <h4 class="mb-3"><i class="bi bi-building"></i> Department-wise Performance</h4>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Department</th>
                                        <th class="text-center">Student Count</th>
                                        <th class="text-center">Average Attendance</th>
                                        <th>Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dept in Model.DepartmentStats.OrderByDescending(d => d.AverageAttendance))
                                    {
                                        <tr>
                                            <td><strong>@dept.DepartmentName</strong></td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@dept.StudentCount</span>
                                            </td>
                                            <td class="text-center">
                                                <strong class="@(dept.AverageAttendance >= 75 ? "text-success" : "text-danger")">
                                                    @dept.AverageAttendance.ToString("0.00")%
                                                </strong>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar @(dept.AverageAttendance >= 75 ? "bg-success" : dept.AverageAttendance >= 50 ? "bg-warning" : "bg-danger")" 
                                                         role="progressbar" 
                                                         style="width: @dept.AverageAttendance%"
                                                         aria-valuenow="@dept.AverageAttendance" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="100">
                                                        @dept.AverageAttendance.ToString("0.00")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Activity -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3"><i class="bi bi-clock-history"></i> Recent Activity</h4>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Last Attendance Date</h5>
                    <p class="card-text display-6">
                        @if (Model.LastAttendanceDate.HasValue)
                        {
                            @Model.LastAttendanceDate.Value.ToString("dd MMM yyyy")
                        }
                        else
                        {
                            <span class="text-muted">No records</span>
                        }
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Today's Classes</h5>
                    <p class="card-text display-6 text-primary">@Model.TodayClasses</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-gear"></i> Quick Actions</h5>
                    <div class="btn-group" role="group">
                        <a asp-action="StudentAttendanceReport" class="btn btn-primary">
                            <i class="bi bi-person-check"></i> Student Report
                        </a>
                        <a asp-action="LowAttendanceReport" class="btn btn-danger">
                            <i class="bi bi-exclamation-triangle"></i> Defaulters
                        </a>
                        <a asp-action="CourseReport" class="btn btn-success">
                            <i class="bi bi-book"></i> Course Report
                        </a>
                        <a asp-action="TeacherReport" class="btn btn-info">
                            <i class="bi bi-person-badge"></i> Teacher Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Reports" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Reports
            </a>
            <button onclick="window.print()" class="btn btn-outline-primary">
                <i class="bi bi-printer"></i> Print Summary
            </button>
        </div>
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .btn {
                display: none;
            }
        }
    </style>
}
