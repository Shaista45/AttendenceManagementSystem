@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-file-earmark-bar-graph"></i> Reports Dashboard
            </h2>
            <p class="text-muted">Generate and export various attendance reports with custom filters</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Student Attendance Report -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-primary shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-person-check fs-1 text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">Student Attendance Report</h5>
                        </div>
                    </div>
                    <p class="card-text">View detailed attendance records for students including present/absent counts and percentage. Highlights students below 75% attendance.</p>
                    <a asp-action="StudentAttendanceReport" class="btn btn-primary w-100">
                        <i class="bi bi-arrow-right-circle"></i> Generate Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Course-wise Report -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-book fs-1 text-success"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">Course-wise Report</h5>
                        </div>
                    </div>
                    <p class="card-text">Analyze attendance statistics by course including total lectures, average attendance, and number of defaulters per course.</p>
                    <a asp-action="CourseReport" class="btn btn-success w-100">
                        <i class="bi bi-arrow-right-circle"></i> Generate Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Teacher Report -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-person-badge fs-1 text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">Teacher Report</h5>
                        </div>
                    </div>
                    <p class="card-text">View teacher performance including assigned courses, total classes taken, and attendance marking status.</p>
                    <a asp-action="TeacherReport" class="btn btn-info w-100">
                        <i class="bi bi-arrow-right-circle"></i> Generate Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Daily Attendance Report -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-calendar-check fs-1 text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">Daily Attendance Report</h5>
                        </div>
                    </div>
                    <p class="card-text">Track daily attendance records showing class-wise attendance for specific dates with present/absent counts.</p>
                    <a asp-action="DailyAttendanceReport" class="btn btn-warning w-100">
                        <i class="bi bi-arrow-right-circle"></i> Generate Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Low Attendance (Defaulter) Report -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-danger shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-exclamation-triangle fs-1 text-danger"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">Low Attendance Report</h5>
                        </div>
                    </div>
                    <p class="card-text">Identify students with attendance below 75% threshold (defaulters) with shortfall details and required classes.</p>
                    <a asp-action="LowAttendanceReport" class="btn btn-danger w-100">
                        <i class="bi bi-arrow-right-circle"></i> Generate Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Summary Analytics -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-dark shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-bar-chart fs-1 text-dark"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="card-title mb-0">Summary Analytics</h5>
                        </div>
                    </div>
                    <p class="card-text">View comprehensive dashboard with overall statistics, department-wise performance, and key attendance metrics.</p>
                    <a asp-action="SummaryAnalytics" class="btn btn-dark w-100">
                        <i class="bi bi-arrow-right-circle"></i> View Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle"></i> Report Features
                    </h5>
                    <ul class="mb-0">
                        <li>Apply custom filters: Department, Batch, Section, Course, and Date Range</li>
                        <li>Export reports to PDF and Excel formats</li>
                        <li>Print reports directly from browser</li>
                        <li>Real-time data with automatic calculations</li>
                        <li>Visual indicators for low attendance and defaulters</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .bi {
            vertical-align: middle;
        }
    </style>
}
