@model AttendenceManagementSystem.ViewModels.TeacherReportPageViewModel
@{
    ViewData["Title"] = "Teacher Report";
}

<style>
    .print-header {
        display: none;
    }
    @@media print {
        .no-print { display: none !important; }
        .card { border: none !important; box-shadow: none !important; }
        .card-header { background: white !important; border: none !important; padding: 0 !important; }
        .card-body { padding: 0 !important; background: white !important; }
        .print-header {
            display: block !important;
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #000;
        }
        .print-header h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .print-header p {
            font-size: 14px;
            margin: 5px 0;
        }
        .table { font-size: 12px; }
        .badge { border: 1px solid #000 !important; }
    }
</style>

<script>
    function setMonthlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), now.getMonth(), 1);
        var lastDay = new Date(now.getFullYear(), now.getMonth() + 1, 0);
        document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
        document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
    }
    
    function setYearlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), 0, 1);
        var lastDay = new Date(now.getFullYear(), 11, 31);
        document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
        document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
    }
    
    function setLastSemester() {
        var now = new Date();
        var month = now.getMonth();
        if (month >= 0 && month <= 5) {
            var start = new Date(now.getFullYear() - 1, 7, 1);
            var end = new Date(now.getFullYear() - 1, 11, 31);
        } else {
            var start = new Date(now.getFullYear(), 0, 1);
            var end = new Date(now.getFullYear(), 5, 30);
        }
        document.getElementById('startDate').value = start.toISOString().split('T')[0];
        document.getElementById('endDate').value = end.toISOString().split('T')[0];
    }
    
    function setCurrentSemester() {
        var now = new Date();
        var month = now.getMonth();
        if (month >= 0 && month <= 5) {
            var start = new Date(now.getFullYear(), 0, 1);
            var end = new Date(now.getFullYear(), 5, 30);
        } else {
            var start = new Date(now.getFullYear(), 7, 1);
            var end = new Date(now.getFullYear(), 11, 31);
        }
        document.getElementById('startDate').value = start.toISOString().split('T')[0];
        document.getElementById('endDate').value = end.toISOString().split('T')[0];
    }
</script>

<div class="container-fluid px-4 mt-4">
    <!-- Print Header (visible only when printing) -->
    <div class="print-header">
        <h2>Teacher Performance Report</h2>
        @if (!string.IsNullOrEmpty(ViewBag.SelectedDepartment as string))
        {
            <p><strong>Department:</strong> @ViewBag.SelectedDepartment</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedBatch as string))
        {
            <p><strong>Session:</strong> @ViewBag.SelectedBatch</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedSection as string))
        {
            <p><strong>Section:</strong> @ViewBag.SelectedSection</p>
        }
        @if (Model.Filters.StartDate.HasValue || Model.Filters.EndDate.HasValue)
        {
            <p><strong>Period:</strong> 
                @if (Model.Filters.StartDate.HasValue) { @Model.Filters.StartDate.Value.ToString("dd MMM yyyy") } 
                @if (Model.Filters.StartDate.HasValue && Model.Filters.EndDate.HasValue) { <text> to </text> }
                @if (Model.Filters.EndDate.HasValue) { @Model.Filters.EndDate.Value.ToString("dd MMM yyyy") }
            </p>
        }
    </div>

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3 no-print">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-chalkboard-teacher me-2"></i>Teacher Performance Report
            </h1>
            <p class="text-muted small mb-0">Comprehensive overview of faculty teaching activities</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4 no-print">
        <div class="card-body bg-light bg-opacity-50 py-3">
            <form method="get" asp-action="TeacherReport" id="reportForm">
                <!-- Quick Period Selection -->
                <div class="row g-2 mb-3">
                    <div class="col-12">
                        <label class="form-label small text-muted text-uppercase fw-bold mb-2">Quick Period Selection</label>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" onclick="setMonthlyPeriod()">Current Month</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setYearlyPeriod()">Current Year</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setLastSemester()">Last Semester</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setCurrentSemester()">Current Semester</button>
                        </div>
                    </div>
                </div>

                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label small text-muted text-uppercase fw-bold">Department</label>
                        <select name="DepartmentId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Departments">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Course</label>
                        <select name="CourseId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Start Date</label>
                        <input type="date" name="StartDate" id="startDate" class="form-control border-0 shadow-sm" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">End Date</label>
                        <input type="date" name="EndDate" id="endDate" class="form-control border-0 shadow-sm" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary shadow-sm w-100">
                            <i class="fas fa-search me-1"></i>Apply
                        </button>
                    </div>
                    <div class="col-md-auto">
                        <a asp-action="TeacherReport" class="btn btn-light border shadow-sm" title="Reset Filters">
                            <i class="fas fa-undo text-muted"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.Teachers.Any())
    {
        <!-- Summary Statistics -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-info shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-info fw-bold x-small mb-1">Total Teachers</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Count</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                                    <i class="fas fa-users fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-primary shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-primary fw-bold x-small mb-1">Total Assignments</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Sum(t => t.AssignedCourses)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                    <i class="fas fa-book fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-success shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-success fw-bold x-small mb-1">Classes Taken</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Sum(t => t.TotalClassesTaken)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                    <i class="fas fa-chalkboard fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-warning shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-warning text-dark fw-bold x-small mb-1">Attendance Marked</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Sum(t => t.AttendanceMarked)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning text-dark">
                                    <i class="fas fa-check-circle fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Teacher Performance Details
                    <span class="badge bg-primary bg-opacity-10 text-primary ms-2">@Model.Teachers.Count Teachers</span>
                </h6>
                <div class="no-print">
                    <button onclick="window.print()" class="btn btn-sm btn-outline-primary shadow-sm">
                        <i class="fas fa-print me-2"></i>Print Report
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Employee ID</th>
                                <th class="fw-bold">Teacher Name</th>
                                <th class="fw-bold">Department</th>
                                <th class="text-center fw-bold">Assigned Courses</th>
                                <th class="text-center fw-bold">Classes Taken</th>
                                <th class="text-center fw-bold">Attendance Marked</th>
                                <th class="text-center fw-bold">Marking %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model.Teachers)
                            {
                                <tr>
                                    <td><span class="text-muted small">@teacher.EmployeeId</span></td>
                                    <td><span class="fw-bold text-dark">@teacher.TeacherName</span></td>
                                    <td>@teacher.Department</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">@teacher.AssignedCourses</span>
                                    </td>
                                    <td class="text-center"><span class="text-dark">@teacher.TotalClassesTaken</span></td>
                                    <td class="text-center">
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill">@teacher.AttendanceMarked</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-success">@teacher.MarkingPercentage.ToString("0.00")%</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info border-0 shadow-sm d-flex" role="alert">
            <i class="fas fa-info-circle fa-2x me-3 mt-1"></i>
            <div>
                <h6 class="alert-heading fw-bold">No Records Found</h6>
                <p class="small mb-0">No teacher records found matching your criteria. Please adjust your filters and try again.</p>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Back to Reports
            </a>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    
    @@media print {
        .btn, .card-header { display: none !important; }
        .card { border: 1px solid #dee2e6 !important; }
    }
</style>
    </div>
</div>
