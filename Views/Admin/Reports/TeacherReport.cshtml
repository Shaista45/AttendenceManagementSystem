@model AttendenceManagementSystem.ViewModels.TeacherReportPageViewModel
@{
    ViewData["Title"] = "Teacher Report";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-chalkboard-teacher me-2"></i>Teacher Performance Report
            </h1>
            <p class="text-muted small mb-0">Comprehensive overview of faculty teaching activities</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-filter me-2"></i>Report Filters
            </h6>
        </div>
        <div class="card-body bg-light bg-opacity-50">
            <form method="get" asp-action="TeacherReport">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label fw-bold small text-dark">Department</label>
                        <select name="DepartmentId" class="form-select shadow-sm" asp-items="ViewBag.Departments">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold small text-dark">Course</label>
                        <select name="CourseId" class="form-select shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary shadow-sm">
                            <i class="fas fa-search me-2"></i>Apply Filters
                        </button>
                        <a asp-action="TeacherReport" class="btn btn-outline-secondary shadow-sm">
                            <i class="fas fa-times-circle me-2"></i>Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.Teachers.Any())
    {
        <!-- Summary Statistics -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-info shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-info fw-bold x-small mb-1">Total Teachers</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Count</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                                    <i class="fas fa-users fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-primary shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-primary fw-bold x-small mb-1">Total Assignments</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Sum(t => t.AssignedCourses)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                    <i class="fas fa-book fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-success shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-success fw-bold x-small mb-1">Classes Taken</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Sum(t => t.TotalClassesTaken)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                    <i class="fas fa-chalkboard fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card h-100 border-start border-4 border-warning shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-warning text-dark fw-bold x-small mb-1">Attendance Marked</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Teachers.Sum(t => t.AttendanceMarked)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning text-dark">
                                    <i class="fas fa-check-circle fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Teacher Performance Details
                    <span class="badge bg-primary bg-opacity-10 text-primary ms-2">@Model.Teachers.Count Teachers</span>
                </h6>
                <div>
                    <button onclick="window.print()" class="btn btn-sm btn-outline-primary shadow-sm">
                        <i class="fas fa-print me-2"></i>Print Report
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Employee ID</th>
                                <th class="fw-bold">Teacher Name</th>
                                <th class="fw-bold">Department</th>
                                <th class="text-center fw-bold">Assigned Courses</th>
                                <th class="text-center fw-bold">Classes Taken</th>
                                <th class="text-center fw-bold">Attendance Marked</th>
                                <th class="text-center fw-bold">Marking %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model.Teachers)
                            {
                                <tr>
                                    <td><span class="text-muted small">@teacher.EmployeeId</span></td>
                                    <td><span class="fw-bold text-dark">@teacher.TeacherName</span></td>
                                    <td>@teacher.Department</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">@teacher.AssignedCourses</span>
                                    </td>
                                    <td class="text-center"><span class="text-dark">@teacher.TotalClassesTaken</span></td>
                                    <td class="text-center">
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill">@teacher.AttendanceMarked</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-success">@teacher.MarkingPercentage.ToString("0.00")%</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info border-0 shadow-sm d-flex" role="alert">
            <i class="fas fa-info-circle fa-2x me-3 mt-1"></i>
            <div>
                <h6 class="alert-heading fw-bold">No Records Found</h6>
                <p class="small mb-0">No teacher records found matching your criteria. Please adjust your filters and try again.</p>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Back to Reports
            </a>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    
    @@media print {
        .btn, .card-header { display: none !important; }
        .card { border: 1px solid #dee2e6 !important; }
    }
</style>
    </div>
</div>
