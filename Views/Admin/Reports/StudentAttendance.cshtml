@model AttendenceManagementSystem.ViewModels.StudentAttendanceReportPageViewModel
@{
    ViewData["Title"] = "Student Attendance Report";
}

<style>
    .print-header {
        display: none;
    }
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }

    @@media print {
        .no-print, .btn, .card-header, .alert-info { display: none !important; }
        .card { border: none !important; box-shadow: none !important; }
        .card-header { background: white !important; border: none !important; padding: 0 !important; }
        .card-body { padding: 0 !important; background: white !important; }
        
        .print-header {
            display: block !important;
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #000;
        }
        .print-header h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .print-header p {
            font-size: 14px;
            margin: 5px 0;
        }
        .table { font-size: 12px; }
        .badge { border: 1px solid #000 !important; color: #000 !important; }
        /* Ensure table colors print correctly */
        .table-danger { background-color: #f8d7da !important; -webkit-print-color-adjust: exact; }
    }
</style>

<script>
    // Store unique data sources
    var allBatches = [];
    var allSections = [];
    var allCourses = [];

    document.addEventListener('DOMContentLoaded', function() {
        // 1. Extract and Deduplicate options immediately on load
        allBatches = getUniqueOptions('batchSelect');
        allSections = getUniqueOptions('sectionSelect');
        allCourses = getUniqueOptions('courseSelect');

        // 2. Initial run to set state based on any pre-selected department
        filterDropdowns();
    });

    // Helper to extract unique objects from a select element
    function getUniqueOptions(elementId) {
        var select = document.getElementById(elementId);
        var seen = new Set();
        var uniqueOptions = [];

        Array.from(select.options).forEach(opt => {
            // Skip the "All" placeholder (value is empty string)
            if (opt.value === '') return;

            // Create a unique key (Value + Text) to prevent duplicates
            var key = opt.value + '|' + opt.text;
            
            if (!seen.has(key)) {
                seen.add(key);
                uniqueOptions.push({
                    value: opt.value,
                    text: opt.text,
                    // Note: This relies on the option having a 'data-department' attribute
                    dept: opt.getAttribute('data-department') 
                });
            }
        });
        return uniqueOptions;
    }

    function filterDropdowns() {
        var deptId = document.getElementById('departmentSelect').value;

        // Rebuild the dropdowns
        repopulateSelect('batchSelect', allBatches, deptId, 'All Batches');
        repopulateSelect('sectionSelect', allSections, deptId, 'All Sections');
        repopulateSelect('courseSelect', allCourses, deptId, 'All Courses');
    }

    function repopulateSelect(elementId, sourceData, selectedDeptId, defaultText) {
        var select = document.getElementById(elementId);
        var currentSelection = select.value; // Remember what was selected

        // Clear existing options
        select.innerHTML = '';

        // Add Default "All" Option
        var defaultOption = new Option(defaultText, "");
        select.add(defaultOption);

        // Add filtered options
        sourceData.forEach(function(item) {
            // Logic: Show if no Dept selected OR item matches Dept
            // If item.dept is null/undefined (server didn't send it), we usually show it to be safe, 
            // or strictly hide it. Here we strictly filter if Dept is selected.
            if (!selectedDeptId || (item.dept && item.dept === selectedDeptId)) {
                var option = new Option(item.text, item.value);
                option.setAttribute('data-department', item.dept || "");
                select.add(option);
            }
        });

        // Restore selection if it still exists in the new list
        // (Use Array.from because existing options have changed)
        var exists = Array.from(select.options).some(opt => opt.value === currentSelection);
        if (exists && currentSelection !== "") {
            select.value = currentSelection;
        } else {
            select.value = ""; // Reset to "All" if the selected item is now hidden
        }
    }

    // Date Helpers
    function setMonthlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), now.getMonth(), 1);
        var lastDay = new Date(now.getFullYear(), now.getMonth() + 1, 0);
        updateDateInputs(firstDay, lastDay);
    }
    
    function setYearlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), 0, 1);
        var lastDay = new Date(now.getFullYear(), 11, 31);
        updateDateInputs(firstDay, lastDay);
    }
    
    function setLastSemester() {
        var now = new Date();
        var month = now.getMonth();
        var start, end;
        if (month >= 0 && month <= 5) { // Spring, so Last is Fall
            start = new Date(now.getFullYear() - 1, 7, 1);
            end = new Date(now.getFullYear() - 1, 11, 31);
        } else { // Fall, so Last is Spring
            start = new Date(now.getFullYear(), 0, 1);
            end = new Date(now.getFullYear(), 5, 30);
        }
        updateDateInputs(start, end);
    }
    
    function setCurrentSemester() {
        var now = new Date();
        var month = now.getMonth();
        var start, end;
        if (month >= 0 && month <= 5) {
            start = new Date(now.getFullYear(), 0, 1);
            end = new Date(now.getFullYear(), 5, 30);
        } else {
            start = new Date(now.getFullYear(), 7, 1);
            end = new Date(now.getFullYear(), 11, 31);
        }
        updateDateInputs(start, end);
    }

    function updateDateInputs(start, end) {
        // Adjust for timezone offset to ensure YYYY-MM-DD matches local time
        const offset = start.getTimezoneOffset();
        const startLocal = new Date(start.getTime() - (offset*60*1000));
        const endLocal = new Date(end.getTime() - (offset*60*1000));
        
        document.getElementById('startDate').value = startLocal.toISOString().split('T')[0];
        document.getElementById('endDate').value = endLocal.toISOString().split('T')[0];
    }
</script>

<div class="container-fluid px-4 mt-4">
    <div class="print-header">
        <h2>Student Attendance Report</h2>
        @if (!string.IsNullOrEmpty(ViewBag.SelectedDepartment as string))
        {
            <p><strong>Department:</strong> @ViewBag.SelectedDepartment</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedBatch as string))
        {
            <p><strong>Session:</strong> @ViewBag.SelectedBatch</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedSection as string))
        {
            <p><strong>Section:</strong> @ViewBag.SelectedSection</p>
        }
        @if (Model.Filters.StartDate.HasValue || Model.Filters.EndDate.HasValue)
        {
            <p><strong>Period:</strong> 
                @if (Model.Filters.StartDate.HasValue) { @Model.Filters.StartDate.Value.ToString("dd MMM yyyy") } 
                @if (Model.Filters.StartDate.HasValue && Model.Filters.EndDate.HasValue) { <text> to </text> }
                @if (Model.Filters.EndDate.HasValue) { @Model.Filters.EndDate.Value.ToString("dd MMM yyyy") }
            </p>
        }
    </div>

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3 no-print">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-user-graduate me-2"></i>Student Attendance Report
            </h1>
            <p class="text-muted small mb-0">Detailed attendance tracking for students</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4 no-print">
        <div class="card-body bg-light bg-opacity-50 py-3">
            <form method="get" asp-action="StudentAttendanceReport" id="reportForm">
                <div class="row g-2 mb-3">
                    <div class="col-12">
                        <label class="form-label small text-muted text-uppercase fw-bold mb-2">Quick Period Selection</label>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" onclick="setMonthlyPeriod()">Current Month</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setYearlyPeriod()">Current Year</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setLastSemester()">Last Semester</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setCurrentSemester()">Current Semester</button>
                        </div>
                    </div>
                </div>

                <div class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Department</label>
                        <select name="DepartmentId" id="departmentSelect" class="form-select border-0 shadow-sm" asp-items="ViewBag.Departments" onchange="filterDropdowns()">
                            <option value="">All Departments</option>
                        </select>               
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Batch</label>
                        <select name="BatchId" id="batchSelect" class="form-select border-0 shadow-sm" asp-items="ViewBag.Batches">
                            <option value="">All Batches</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Section</label>
                        <select name="SectionId" id="sectionSelect" class="form-select border-0 shadow-sm" asp-items="ViewBag.Sections">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Course</label>
                        <select name="CourseId" id="courseSelect" class="form-select border-0 shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Start Date</label>
                        <input type="date" name="StartDate" id="startDate" class="form-control border-0 shadow-sm" value="@Model.Filters.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-1">
                        <label class="form-label small text-muted text-uppercase fw-bold">End Date</label>
                        <input type="date" name="EndDate" id="endDate" class="form-control border-0 shadow-sm" value="@Model.Filters.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary shadow-sm">
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                    <div class="col-md-auto">
                        <a asp-action="StudentAttendanceReport" class="btn btn-light border shadow-sm" title="Reset Filters">
                            <i class="fas fa-undo text-muted"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Students.Any())
    {
        <div class="row g-4 mb-4">
            <div class="col-xl-4 col-md-6">
                <div class="card h-100 border-start border-4 border-primary shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-primary fw-bold x-small mb-1">Total Students</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Students.Count</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                    <i class="fas fa-users fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card h-100 border-start border-4 border-success shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-success fw-bold x-small mb-1">Above 75%</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Students.Count(s => !s.IsBelowThreshold)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                    <i class="fas fa-check-circle fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card h-100 border-start border-4 border-danger shadow-sm py-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col me-2">
                                <div class="text-uppercase text-danger fw-bold x-small mb-1">Below 75%</div>
                                <div class="h4 mb-0 fw-bold text-gray-800">@Model.Students.Count(s => s.IsBelowThreshold)</div>
                            </div>
                            <div class="col-auto">
                                <div class="bg-danger bg-opacity-10 p-3 rounded-circle text-danger">
                                    <i class="fas fa-exclamation-triangle fa-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Student Attendance Details
                    <span class="badge bg-primary bg-opacity-10 text-primary ms-2">@Model.Students.Count Students</span>
                </h6>
                <div class="no-print">
                    <button onclick="window.print()" class="btn btn-sm btn-outline-primary shadow-sm">
                        <i class="fas fa-print me-2"></i>Print Report
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Roll Number</th>
                                <th class="fw-bold">Student Name</th>
                                <th class="fw-bold">Department</th>
                                <th class="fw-bold">Batch</th>
                                <th class="fw-bold">Section</th>
                                <th class="text-center fw-bold">Total Classes</th>
                                <th class="text-center fw-bold">Present</th>
                                <th class="text-center fw-bold">Absent</th>
                                <th class="text-center fw-bold">Attendance %</th>
                                <th class="text-center fw-bold">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.Students)
                            {
                                <tr class="@(student.IsBelowThreshold ? "table-danger" : "")">
                                    <td><span class="text-muted small">@student.RollNumber</span></td>
                                    <td><span class="fw-bold text-dark">@student.StudentName</span></td>
                                    <td>@student.Department</td>
                                    <td>@student.Batch</td>
                                    <td>@student.Section</td>
                                    <td class="text-center"><span class="text-dark">@student.TotalClasses</span></td>
                                    <td class="text-center">
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill">@student.ClassesAttended</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@student.ClassesAbsent</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="@(student.IsBelowThreshold ? "text-danger" : "text-success")">
                                            @student.AttendancePercentage.ToString("0.00")%
                                        </strong>
                                    </td>
                                    <td class="text-center">
                                        @if (student.IsBelowThreshold)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle"></i> Below 75%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Good
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        @* REMOVED DUPLICATE SUMMARY STATISTICS BLOCK FROM HERE *@
    }
    else
    {
        <div class="alert alert-info border-0 shadow-sm d-flex" role="alert">
            <i class="fas fa-info-circle fa-2x me-3 mt-1"></i>
            <div>
                <h6 class="alert-heading fw-bold">No Records Found</h6>
                <p class="small mb-0">No attendance records found matching your criteria. Please adjust your filters and try again.</p>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Back to Reports
            </a>
        </div>
    </div>
</div>