@model AttendenceManagementSystem.ViewModels.LowAttendanceReportPageViewModel
@{
    ViewData["Title"] = "Low Attendance Report";
}

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    .print-header {
        display: none;
    }
    @@media print {
        .no-print { display: none !important; }
        .card { border: none !important; box-shadow: none !important; }
        .card-header { background: white !important; border: none !important; padding: 0 !important; }
        .card-body { padding: 0 !important; background: white !important; }
        .alert { display: none !important; }
        .print-header {
            display: block !important;
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #000;
        }
        .print-header h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .print-header p {
            font-size: 14px;
            margin: 5px 0;
        }
        .table { font-size: 12px; }
        .badge { border: 1px solid #000 !important; }
    }
</style>

<script>
    function setMonthlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), now.getMonth(), 1);
        var lastDay = new Date(now.getFullYear(), now.getMonth() + 1, 0);
        document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
        document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
    }
    
    function setYearlyPeriod() {
        var now = new Date();
        var firstDay = new Date(now.getFullYear(), 0, 1);
        var lastDay = new Date(now.getFullYear(), 11, 31);
        document.getElementById('startDate').value = firstDay.toISOString().split('T')[0];
        document.getElementById('endDate').value = lastDay.toISOString().split('T')[0];
    }
    
    function setLastSemester() {
        var now = new Date();
        var month = now.getMonth();
        if (month >= 0 && month <= 5) {
            var start = new Date(now.getFullYear() - 1, 7, 1);
            var end = new Date(now.getFullYear() - 1, 11, 31);
        } else {
            var start = new Date(now.getFullYear(), 0, 1);
            var end = new Date(now.getFullYear(), 5, 30);
        }
        document.getElementById('startDate').value = start.toISOString().split('T')[0];
        document.getElementById('endDate').value = end.toISOString().split('T')[0];
    }
    
    function setCurrentSemester() {
        var now = new Date();
        var month = now.getMonth();
        if (month >= 0 && month <= 5) {
            var start = new Date(now.getFullYear(), 0, 1);
            var end = new Date(now.getFullYear(), 5, 30);
        } else {
            var start = new Date(now.getFullYear(), 7, 1);
            var end = new Date(now.getFullYear(), 11, 31);
        }
        document.getElementById('startDate').value = start.toISOString().split('T')[0];
        document.getElementById('endDate').value = end.toISOString().split('T')[0];
    }
</script>

<div class="container-fluid px-4 mt-4">
    <!-- Print Header (visible only when printing) -->
    <div class="print-header">
        <h2>Low Attendance Report</h2>
        @if (!string.IsNullOrEmpty(ViewBag.SelectedDepartment as string))
        {
            <p><strong>Department:</strong> @ViewBag.SelectedDepartment</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedBatch as string))
        {
            <p><strong>Session:</strong> @ViewBag.SelectedBatch</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SelectedSection as string))
        {
            <p><strong>Section:</strong> @ViewBag.SelectedSection</p>
        }
        @if (Model.Filters.StartDate.HasValue || Model.Filters.EndDate.HasValue)
        {
            <p><strong>Period:</strong> 
                @if (Model.Filters.StartDate.HasValue) { @Model.Filters.StartDate.Value.ToString("dd MMM yyyy") } 
                @if (Model.Filters.StartDate.HasValue && Model.Filters.EndDate.HasValue) { <text> to </text> }
                @if (Model.Filters.EndDate.HasValue) { @Model.Filters.EndDate.Value.ToString("dd MMM yyyy") }
            </p>
        }
        <p><strong>Threshold:</strong> @Model.ThresholdPercentage%</p>
    </div>

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3 no-print">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-exclamation-triangle me-2"></i>Low Attendance Report
            </h1>
            <p class="text-muted small mb-0">Students below attendance threshold</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4 no-print">
        <div class="card-body bg-light bg-opacity-50 py-3">
            <form method="get" asp-action="LowAttendanceReport" id="reportForm">
                <!-- Quick Period Selection -->
                <div class="row g-2 mb-3">
                    <div class="col-12">
                        <label class="form-label small text-muted text-uppercase fw-bold mb-2">Quick Period Selection</label>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary" onclick="setMonthlyPeriod()">Current Month</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setYearlyPeriod()">Current Year</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setLastSemester()">Last Semester</button>
                            <button type="button" class="btn btn-outline-primary" onclick="setCurrentSemester()">Current Semester</button>
                        </div>
                    </div>
                </div>

                <div class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Department</label>
                        <select name="DepartmentId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Departments">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Batch</label>
                        <select name="BatchId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Batches">
                            <option value="">All Batches</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Section</label>
                        <select name="SectionId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Sections">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small text-muted text-uppercase fw-bold">Course</label>
                        <select name="CourseId" class="form-select border-0 shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <label class="form-label small text-muted text-uppercase fw-bold">Start Date</label>
                        <input type="date" name="StartDate" id="startDate" class="form-control border-0 shadow-sm" />
                    </div>
                    <div class="col-md-1">
                        <label class="form-label small text-muted text-uppercase fw-bold">End Date</label>
                        <input type="date" name="EndDate" id="endDate" class="form-control border-0 shadow-sm" />
                    </div>
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary shadow-sm">
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                    <div class="col-md-auto">
                        <a asp-action="LowAttendanceReport" class="btn btn-light border shadow-sm" title="Reset Filters">
                            <i class="fas fa-undo text-muted"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.Defaulters.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Defaulter List
                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@Model.Defaulters.Count Students</span>
                </h6>
                <div class="no-print">
                    <button onclick="window.print()" class="btn btn-outline-primary btn-sm shadow-sm">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="alert alert-warning shadow-sm">
                    <i class="fas fa-info-circle me-2"></i> 
                    <strong>Note:</strong> Students listed below have attendance below @Model.ThresholdPercentage% in one or more courses.
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Roll Number</th>
                                <th class="fw-bold">Student Name</th>
                                <th class="fw-bold">Department</th>
                                <th class="fw-bold">Batch</th>
                                <th class="fw-bold">Section</th>
                                <th class="fw-bold">Course</th>
                                <th class="text-center fw-bold">Total</th>
                                <th class="text-center fw-bold">Attended</th>
                                <th class="text-center fw-bold">Attendance %</th>
                                <th class="text-center fw-bold">Shortfall</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var defaulter in Model.Defaulters)
                            {
                                <tr class="table-danger">
                                    <td>@defaulter.RollNumber</td>
                                    <td>@defaulter.StudentName</td>
                                    <td>@defaulter.Department</td>
                                    <td>@defaulter.Batch</td>
                                    <td>@defaulter.Section</td>
                                    <td>@defaulter.CourseName</td>
                                    <td class="text-center">@defaulter.TotalClasses</td>
                                    <td class="text-center">
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill">@defaulter.ClassesAttended</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-danger">@defaulter.AttendancePercentage.ToString("0.00")%</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">
                                            <i class="fas fa-minus-circle me-1"></i>@defaulter.ShortfallClasses classes
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-center border-danger">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.Defaulters.Count</h3>
                        <p class="mb-0">Total Defaulters</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@(Model.Defaulters.Any() ? Model.Defaulters.Average(d => d.AttendancePercentage).ToString("0.00") : "0")%</h3>
                        <p class="mb-0">Average Attendance</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.Defaulters.Sum(d => d.ShortfallClasses)</h3>
                        <p class="mb-0">Total Shortfall Classes</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success shadow-sm">
            <i class="fas fa-check-circle me-2"></i><strong>Great news!</strong> No students found with attendance below @Model.ThresholdPercentage%.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>
</div>
