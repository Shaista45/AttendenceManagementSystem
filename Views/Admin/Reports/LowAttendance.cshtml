@model AttendenceManagementSystem.ViewModels.LowAttendanceReportPageViewModel
@{
    ViewData["Title"] = "Low Attendance Report";
}

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #5a5c69; }
    @@media print {
        .btn, .card-header { display: none !important; }
        .card { border: 1px solid #dee2e6 !important; }
    }
</style>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-exclamation-triangle me-2"></i>Low Attendance (Defaulter) Report
            </h1>
            <p class="text-muted small mb-0">Students with attendance below @Model.ThresholdPercentage% threshold</p>
        </div>
        <a href="javascript:location.reload()" class="btn btn-outline-primary btn-sm shadow-sm bg-white">
            <i class="fas fa-sync-alt me-2"></i>Refresh Data
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h6 class="m-0 fw-bold text-primary">
                <i class="fas fa-filter me-2"></i>Report Filters
            </h6>
        </div>
        <div class="card-body bg-light bg-opacity-50">
            <form method="get" asp-action="LowAttendanceReport">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold small text-dark">Department</label>
                        <select name="DepartmentId" class="form-select shadow-sm" asp-items="ViewBag.Departments">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold small text-dark">Batch</label>
                        <select name="BatchId" class="form-select shadow-sm" asp-items="ViewBag.Batches">
                            <option value="">All Batches</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold small text-dark">Section</label>
                        <select name="SectionId" class="form-select shadow-sm" asp-items="ViewBag.Sections">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-bold small text-dark">Course</label>
                        <select name="CourseId" class="form-select shadow-sm" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary shadow-sm">
                            <i class="fas fa-search me-2"></i>Apply Filters
                        </button>
                        <a asp-action="LowAttendanceReport" class="btn btn-outline-secondary shadow-sm">
                            <i class="fas fa-times me-2"></i>Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.Defaulters.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fas fa-table me-2"></i>Defaulter List
                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@Model.Defaulters.Count Students</span>
                </h6>
                <div>
                    <button onclick="window.print()" class="btn btn-outline-primary btn-sm shadow-sm">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
            <div class="card-body bg-light bg-opacity-50">
                <div class="alert alert-warning shadow-sm">
                    <i class="fas fa-info-circle me-2"></i> 
                    <strong>Note:</strong> Students listed below have attendance below @Model.ThresholdPercentage% in one or more courses.
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">Roll Number</th>
                                <th class="fw-bold">Student Name</th>
                                <th class="fw-bold">Department</th>
                                <th class="fw-bold">Batch</th>
                                <th class="fw-bold">Section</th>
                                <th class="fw-bold">Course</th>
                                <th class="text-center fw-bold">Total</th>
                                <th class="text-center fw-bold">Attended</th>
                                <th class="text-center fw-bold">Attendance %</th>
                                <th class="text-center fw-bold">Shortfall</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var defaulter in Model.Defaulters)
                            {
                                <tr class="table-danger">
                                    <td>@defaulter.RollNumber</td>
                                    <td>@defaulter.StudentName</td>
                                    <td>@defaulter.Department</td>
                                    <td>@defaulter.Batch</td>
                                    <td>@defaulter.Section</td>
                                    <td>@defaulter.CourseName</td>
                                    <td class="text-center">@defaulter.TotalClasses</td>
                                    <td class="text-center">
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill">@defaulter.ClassesAttended</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-danger">@defaulter.AttendancePercentage.ToString("0.00")%</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">
                                            <i class="fas fa-minus-circle me-1"></i>@defaulter.ShortfallClasses classes
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-center border-danger">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.Defaulters.Count</h3>
                        <p class="mb-0">Total Defaulters</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@(Model.Defaulters.Any() ? Model.Defaulters.Average(d => d.AttendancePercentage).ToString("0.00") : "0")%</h3>
                        <p class="mb-0">Average Attendance</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.Defaulters.Sum(d => d.ShortfallClasses)</h3>
                        <p class="mb-0">Total Shortfall Classes</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success shadow-sm">
            <i class="fas fa-check-circle me-2"></i><strong>Great news!</strong> No students found with attendance below @Model.ThresholdPercentage%.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Reports" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>
</div>
