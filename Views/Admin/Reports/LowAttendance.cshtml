@model AttendenceManagementSystem.ViewModels.LowAttendanceReportPageViewModel
@{
    ViewData["Title"] = "Low Attendance Report";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-exclamation-triangle text-danger"></i> Low Attendance (Defaulter) Report
            </h2>
            <p class="text-muted">Students with attendance below @Model.ThresholdPercentage% threshold</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="LowAttendanceReport">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Department</label>
                        <select name="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Batch</label>
                        <select name="BatchId" class="form-select" asp-items="ViewBag.Batches">
                            <option value="">All Batches</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Section</label>
                        <select name="SectionId" class="form-select" asp-items="ViewBag.Sections">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Course</label>
                        <select name="CourseId" class="form-select" asp-items="ViewBag.Courses">
                            <option value="">All Courses</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-search"></i> Apply Filters
                        </button>
                        <a asp-action="LowAttendanceReport" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    @if (Model.Defaulters.Any())
    {
        <div class="card border-danger">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-table"></i> Defaulter List
                    <span class="badge bg-light text-danger">@Model.Defaulters.Count Students</span>
                </h5>
                <div>
                    <button onclick="window.print()" class="btn btn-sm btn-outline-light">
                        <i class="bi bi-printer"></i> Print
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> 
                    <strong>Note:</strong> Students listed below have attendance below @Model.ThresholdPercentage% in one or more courses.
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Roll Number</th>
                                <th>Student Name</th>
                                <th>Department</th>
                                <th>Batch</th>
                                <th>Section</th>
                                <th>Course</th>
                                <th class="text-center">Total</th>
                                <th class="text-center">Attended</th>
                                <th class="text-center">Attendance %</th>
                                <th class="text-center">Shortfall</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var defaulter in Model.Defaulters)
                            {
                                <tr class="table-danger">
                                    <td>@defaulter.RollNumber</td>
                                    <td>@defaulter.StudentName</td>
                                    <td>@defaulter.Department</td>
                                    <td>@defaulter.Batch</td>
                                    <td>@defaulter.Section</td>
                                    <td>@defaulter.CourseName</td>
                                    <td class="text-center">@defaulter.TotalClasses</td>
                                    <td class="text-center">
                                        <span class="badge bg-warning">@defaulter.ClassesAttended</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-danger">@defaulter.AttendancePercentage.ToString("0.00")%</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-danger">
                                            <i class="bi bi-dash-circle"></i> @defaulter.ShortfallClasses classes
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-center border-danger">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.Defaulters.Count</h3>
                        <p class="mb-0">Total Defaulters</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@(Model.Defaulters.Any() ? Model.Defaulters.Average(d => d.AttendancePercentage).ToString("0.00") : "0")%</h3>
                        <p class="mb-0">Average Attendance</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.Defaulters.Sum(d => d.ShortfallClasses)</h3>
                        <p class="mb-0">Total Shortfall Classes</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> <strong>Great news!</strong> No students found with attendance below @Model.ThresholdPercentage%.
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Reports" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Reports
            </a>
        </div>
    </div>
</div>
