@model AttendenceManagementSystem.Models.Department
@{
    ViewData["Title"] = "Edit Department";
}

<div class="container-fluid px-4 mt-4">
    @* Success/Error Message Display *@
    @if (TempData["Message"] != null)
    {
        var messageType = TempData["MessageType"]?.ToString() ?? "success";
        var alertClass = messageType == "success" ? "alert-success" : messageType == "warning" ? "alert-warning" : "alert-danger";
        var iconClass = messageType == "success" ? "fa-check-circle" : messageType == "warning" ? "fa-exclamation-triangle" : "fa-times-circle";
        
        <div class="alert @alertClass alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas @iconClass me-2"></i>
            <strong>@TempData["Message"]</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-edit me-2"></i>Edit Department
            </h1>
            <p class="text-muted small mb-0">Update department details and manage structure</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm shadow-sm bg-white" asp-action="Departments">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
            <button type="button" class="btn btn-outline-danger btn-sm shadow-sm bg-white" id="deleteDepartmentBtn" 
                    data-department-id="@Model.Id" data-department-name="@Model.Name">
                <i class="fas fa-trash me-2"></i>Delete
            </button>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Department Information
                    </h6>
                </div>
                <div class="card-body bg-light bg-opacity-10 p-4">
                    <!-- Alert Container -->
                    <div id="editDepartmentAlert"></div>

                    <form asp-action="EditDepartment" method="post" id="departmentForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label small text-uppercase fw-bold text-muted">Department Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control shadow-sm" placeholder="e.g. Computer Science" />
                                <span asp-validation-for="Name" class="text-danger x-small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Code" class="form-label small text-uppercase fw-bold text-muted">Department Code</label>
                                <input asp-for="Code" class="form-control shadow-sm" placeholder="e.g. CS" maxlength="10" />
                                <span asp-validation-for="Code" class="text-danger x-small"></span>
                                <small class="text-muted x-small">Short code for IDs (e.g. 2023-CS-01)</small>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-layer-group me-2"></i>Batches
                    </h6>
                    <button type="button" class="btn btn-sm btn-primary quick-add-batch-btn shadow-sm" data-department-id="@Model.Id">
                        <i class="fas fa-plus me-1"></i>Add Batch
                    </button>
                </div>
                <div class="card-body p-0">
                    @if (Model.Batches != null && Model.Batches.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-muted x-small text-uppercase">
                                    <tr>
                                        <th class="ps-4">Year</th>
                                        <th>Description</th>
                                        <th class="text-center">Sections</th>
                                        <th class="text-center">Students</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var batch in Model.Batches.OrderByDescending(b => b.Year))
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary">@batch.Year</td>
                                            <td class="text-muted small">@(batch.Description ?? "-")</td>
                                            <td class="text-center"><span class="badge bg-light text-dark border">@(batch.Sections?.Count ?? 0)</span></td>
                                            <td class="text-center"><span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">@(batch.Students?.Count ?? 0)</span></td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group shadow-sm">
                                                    <a asp-controller="Admin" asp-action="ViewBatch" asp-route-id="@batch.Id" 
                                                        class="btn btn-sm btn-light border" title="View Details">
                                                        <i class="fas fa-eye text-primary"></i>
                                                    </a>
                                                    <a asp-controller="Admin" asp-action="EditBatch" asp-route-id="@batch.Id" 
                                                        class="btn btn-sm btn-light border" title="Edit">
                                                        <i class="fas fa-edit text-warning"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-layer-group fa-3x text-muted opacity-25 mb-3"></i>
                            <p class="text-muted small mb-0">No batches created yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-book me-2"></i>Courses
                    </h6>
                    <button type="button" class="btn btn-sm btn-outline-primary quick-add-course-btn shadow-sm" data-department-id="@Model.Id">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
                <div class="card-body p-0">
                    @if (Model.Courses != null && Model.Courses.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var course in Model.Courses.OrderBy(c => c.Code).Take(5))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-bold text-dark small">@course.Code</div>
                                        <div class="text-muted x-small text-truncate" style="max-width: 150px;">@course.Title</div>
                                    </div>
                                    <a asp-controller="Admin" asp-action="ViewCourse" asp-route-id="@course.Id" class="btn btn-sm btn-light border text-primary shadow-sm">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            @if (Model.Courses.Count > 5)
                            {
                                <li class="list-group-item text-center bg-light">
                                    <a asp-controller="Admin" asp-action="Courses" class="text-decoration-none small fw-bold">View All @Model.Courses.Count Courses</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted small">No courses found.</div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-chalkboard-teacher me-2"></i>Faculty
                    </h6>
                    @* Add Faculty Button Removed Here *@
                </div>
                <div class="card-body p-0">
                    @if (Model.Teachers != null && Model.Teachers.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var teacher in Model.Teachers.OrderBy(t => t.FullName).Take(5))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-success bg-opacity-10 text-success rounded-circle p-2 me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                            <span class="fw-bold x-small">@teacher.FullName.Substring(0,1)</span>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark small">@teacher.FullName</div>
                                            <div class="text-muted x-small">@teacher.EmployeeId</div>
                                        </div>
                                    </div>
                                    <a asp-controller="Admin" asp-action="TeacherDetails" asp-route-id="@teacher.Id" class="btn btn-sm btn-light border text-primary shadow-sm">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            @if (Model.Teachers.Count > 5)
                            {
                                <li class="list-group-item text-center bg-light">
                                    <a asp-controller="Admin" asp-action="Teachers" class="text-decoration-none small fw-bold">View All @Model.Teachers.Count Teachers</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted small">No faculty assigned.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-3 mt-4">
        <a class="btn btn-secondary px-4" asp-action="Departments">
            <i class="fas fa-times me-2"></i>Cancel
        </a>
        <button type="submit" form="departmentForm" class="btn btn-primary px-4 shadow-sm fw-bold" id="saveDepartmentBtn">
            <i class="fas fa-save me-2"></i>Save Changes
        </button>
    </div>
</div>

<div class="modal fade" id="deleteDepartmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Delete Department</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete department <strong id="deleteDepartmentName"></strong>?</p>
                <div class="alert alert-danger mb-0">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> This will permanently delete all batches, courses, teachers, and students associated with this department.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteDepartmentConfirmed" asp-controller="Admin" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteDepartmentId" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addBatchModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            </div>
    </div>
</div>

<div class="modal fade" id="addCourseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-book me-2"></i>Add New Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="courseModalError" class="alert alert-danger d-none"></div>
                <form id="addCourseForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="DepartmentId" id="CourseDepartmentId" />
                    
                    <div class="mb-3">
                        <label class="form-label">Course Code <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Code" required placeholder="e.g. CS101" />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Course Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Title" required placeholder="e.g. Intro to Computing" />
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Credits <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" name="Credits" min="1" max="6" required value="3" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Semester <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="Semester" required placeholder="e.g. 1, Fall 2024" maxlength="20" />
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" rows="3" placeholder="Optional course description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveCourseBtn">Save Course</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Auto-dismiss success alerts after 5 seconds
            setTimeout(function() {
                $('.alert-success, .alert-info').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
            
            // ========================================
            // HELPER FUNCTION
            // ========================================
            function showMessage(containerId, message, isSuccess) {
                var colorClass = isSuccess ? 'alert-success' : 'alert-danger';
                var icon = isSuccess ? 'fa-check-circle' : 'fa-exclamation-circle';
                var html = `
                    <div class="alert ${colorClass} alert-dismissible fade show" role="alert">
                        <i class="fas ${icon} me-2"></i>${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>`;
                $('#' + containerId).html(html);
                
                if(isSuccess) {
                    setTimeout(function() {
                        $('#' + containerId).find('.alert').fadeOut();
                    }, 3000);
                }
            }

            // ========================================
            // 0. EDIT DEPARTMENT AJAX FORM
            // ========================================
            $('#departmentForm').on('submit', function(e) {
                e.preventDefault();
                var form = $(this);
                var btn = $('#saveDepartmentBtn');
                var originalBtnText = btn.html();

                if (!form.valid()) return;

                btn.prop('disabled', true).text('Saving...');

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        btn.prop('disabled', false).html(originalBtnText);
                        
                        if (response.success) {
                            showMessage('editDepartmentAlert', response.message, true);
                        } else {
                            var errorMsg = response.message || 'Update failed.';
                            if(response.errors && response.errors.length > 0) {
                                errorMsg += '<br/>' + response.errors.join('<br/>');
                            }
                            showMessage('editDepartmentAlert', errorMsg, false);
                        }
                    },
                    error: function() {
                        btn.prop('disabled', false).html(originalBtnText);
                        showMessage('editDepartmentAlert', 'Server error. Please try again.', false);
                    }
                });
            });
            
            // ==========================================
            // FIX: Move modals to body to prevent backdrop z-index issues
            // ==========================================
            $('#deleteDepartmentModal').appendTo("body");
            $('#addBatchModal').appendTo("body");
            $('#addCourseModal').appendTo("body");

            // ==========================================
            // 1. DELETE DEPARTMENT LOGIC
            // ==========================================
            $('#deleteDepartmentBtn').on('click', function() {
                var deptName = $(this).data('department-name');
                var deptId = $(this).data('department-id');
                $('#deleteDepartmentName').text(deptName);
                $('#deleteDepartmentId').val(deptId);
                new bootstrap.Modal(document.getElementById('deleteDepartmentModal')).show();
            });

            // ==========================================
            // 2. BATCH MANAGEMENT (Quick Add)
            // ==========================================
            
            // Open Batch Modal
            $('.quick-add-batch-btn').on('click', function(e) {
                e.preventDefault();
                var deptId = $(this).data('department-id');
                var modalElement = document.getElementById('addBatchModal');
                
                // Complete cleanup of all modal states
                var existingModal = bootstrap.Modal.getInstance(modalElement);
                if (existingModal) {
                    existingModal.dispose();
                }
                $('.modal-backdrop').remove();
                $('body').removeClass('modal-open').removeAttr('style');
                $(modalElement).removeClass('show').removeAttr('style').hide();
                
                // Load the partial view into the modal body
                $.get('/Admin/CreateBatch?departmentId=' + deptId, function(data) {
                    $('#addBatchModal .modal-content').html(data);
                    // Re-parse validation since we loaded new HTML
                    var form = $('#addBatchForm');
                    if ($.validator && $.validator.unobtrusive) {
                        $.validator.unobtrusive.parse(form);
                    }
                    
                    // Create fresh modal instance after small delay
                    setTimeout(function() {
                        var bsModal = new bootstrap.Modal(modalElement);
                        bsModal.show();
                    }, 100);
                }).fail(function(xhr, status, error) {
                    alert('Error loading batch form: ' + (error || 'Please check your connection.'));
                });
            });

            // Save Batch Button Click (Delegated Event)
            $(document).on('click', '#saveBatchBtn', function(e) {
                e.preventDefault();
                var form = $('#addBatchForm');
                var btn = $(this);

                // Check if form is valid
                if (form.length && $.validator && !form.valid()) {
                    return; 
                }

                // Remove any previous error alerts
                $('#addBatchModal .modal-body .alert').remove();

                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...');

                $.ajax({
                    url: '@Url.Action("CreateBatch", "Admin")',
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        if (response.success) {
                            // Close modal properly before reload
                            var modalElement = document.getElementById('addBatchModal');
                            var modal = bootstrap.Modal.getInstance(modalElement);
                            if (modal) {
                                modal.hide();
                            }
                            setTimeout(function() {
                                location.reload();
                            }, 300);
                        } else {
                            var errorList = "<ul class='mb-0'>";
                            $.each(response.errors, function(i, val) {
                                errorList += "<li>" + val + "</li>";
                            });
                            errorList += "</ul>";
                            
                            var alertHtml = '<div class="alert alert-danger alert-dismissible fade show">' + 
                                            '<strong>Error:</strong> ' + errorList + 
                                            '<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>';
                            
                            $('#addBatchModal .modal-body').prepend(alertHtml);
                            btn.prop('disabled', false).html('<i class="fas fa-save me-2"></i>Save Batch');
                        }
                    },
                    error: function(xhr, status, error) {
                        var alertHtml = '<div class="alert alert-danger alert-dismissible fade show">' + 
                                        '<strong>Error:</strong> A server error occurred. ' + (error || '') +
                                        '<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>';
                        $('#addBatchModal .modal-body').prepend(alertHtml);
                        btn.prop('disabled', false).html('<i class="fas fa-save me-2"></i>Save Batch');
                    }
                });
            });

            // ==========================================
            // 3. COURSE MANAGEMENT (Quick Add)
            // ==========================================
            
            // Open Course Modal
            $('.quick-add-course-btn').on('click', function(e) {
                e.preventDefault();
                var modalElement = document.getElementById('addCourseModal');
                
                // Complete cleanup of all modal states
                var existingModal = bootstrap.Modal.getInstance(modalElement);
                if (existingModal) {
                    existingModal.dispose();
                }
                $('.modal-backdrop').remove();
                $('body').removeClass('modal-open').removeAttr('style');
                $(modalElement).removeClass('show').removeAttr('style').hide();
                
                $('#addCourseForm')[0].reset();
                $('#CourseDepartmentId').val($(this).data('department-id'));
                $('#courseModalError').addClass('d-none');

                // Create fresh modal instance after small delay
                setTimeout(function() {
                    var bsModal = new bootstrap.Modal(modalElement);
                    bsModal.show();
                }, 100);
            });
            
            // Save Course Button Click
            $('#saveCourseBtn').on('click', function(e) {
                e.preventDefault();
                var form = $('#addCourseForm');
                var btn = $(this);
                
                if(!form[0].checkValidity()) {
                    form[0].reportValidity();
                    return;
                }

                $('#courseModalError').addClass('d-none').text('');
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...');

                $.ajax({
                    url: '@Url.Action("CreateCourseQuick", "Admin")',
                    type: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        if(response.success) {
                            // Close modal properly before reload
                            var modalElement = document.getElementById('addCourseModal');
                            var modal = bootstrap.Modal.getInstance(modalElement);
                            if (modal) {
                                modal.hide();
                            }
                            setTimeout(function() {
                                location.reload();
                            }, 300);
                        } else {
                            $('#courseModalError').removeClass('d-none').text(response.message || 'An error occurred.');
                            btn.prop('disabled', false).text('Save Course');
                        }
                    },
                    error: function(xhr, status, error) {
                        $('#courseModalError').removeClass('d-none').text('Server error occurred: ' + (error || 'Unknown error'));
                        btn.prop('disabled', false).text('Save Course');
                    }
                });
            });

            // ==========================================
            // 4. MAIN DEPARTMENT FORM
            // ==========================================
            $('#departmentForm').on('submit', function() {
                if($(this).valid()) {
                    $('#saveDepartmentBtn').prop('disabled', true)
                        .html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...');
                }
            });
        });
    </script>
    <style>
        .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    </style>
}