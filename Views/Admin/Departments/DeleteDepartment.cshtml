@model AttendenceManagementSystem.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-trash text-danger me-2"></i>Delete Department
        </h1>
        <a class="btn btn-secondary" asp-action="Departments">
            <i class="fas fa-arrow-left me-2"></i>Back to Departments
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. Deleting this department will permanently remove all associated data.
                    </div>

                    <h5 class="mb-3">Are you sure you want to delete this department?</h5>
                    
                    <dl class="row mb-4">
                        <dt class="col-sm-3">Department Name</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Department Code</dt>
                        <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Code</span></dd>

                        <dt class="col-sm-3">Created On</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="DeleteDepartmentConfirmed" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Yes, Delete Department
                            </button>
                            <a class="btn btn-secondary" asp-action="Departments">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning py-3">
                    <h6 class="m-0 font-weight-bold text-dark">
                        <i class="fas fa-info-circle me-2"></i>Impact Assessment
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Deleting this department will also delete:</p>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fas fa-users text-primary me-2"></i>Batches</span>
                            <span class="badge bg-primary">@(Model.Batches?.Count ?? 0)</span>
                        </div>
                        @if (Model.Batches?.Any() ?? false)
                        {
                            <ul class="small text-muted mb-0 ps-4">
                                @foreach (var batch in Model.Batches.Take(3))
                                {
                                    <li>Batch @batch.Year</li>
                                }
                                @if (Model.Batches.Count > 3)
                                {
                                    <li>... and @(Model.Batches.Count - 3) more</li>
                                }
                            </ul>
                        }
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fas fa-book text-info me-2"></i>Courses</span>
                            <span class="badge bg-info">@(Model.Courses?.Count ?? 0)</span>
                        </div>
                        @if (Model.Courses?.Any() ?? false)
                        {
                            <ul class="small text-muted mb-0 ps-4">
                                @foreach (var course in Model.Courses.Take(3))
                                {
                                    <li>@course.Code - @course.Title</li>
                                }
                                @if (Model.Courses.Count > 3)
                                {
                                    <li>... and @(Model.Courses.Count - 3) more</li>
                                }
                            </ul>
                        }
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fas fa-chalkboard-teacher text-success me-2"></i>Teachers</span>
                            <span class="badge bg-success">@(Model.Teachers?.Count ?? 0)</span>
                        </div>
                        @if (Model.Teachers?.Any() ?? false)
                        {
                            <ul class="small text-muted mb-0 ps-4">
                                @foreach (var teacher in Model.Teachers.Take(3))
                                {
                                    <li>@teacher.FullName</li>
                                }
                                @if (Model.Teachers.Count > 3)
                                {
                                    <li>... and @(Model.Teachers.Count - 3) more</li>
                                }
                            </ul>
                        }
                    </div>

                    <div class="mb-0">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fas fa-user-graduate text-warning me-2"></i>Students</span>
                            <span class="badge bg-warning">@(Model.Students?.Count ?? 0)</span>
                        </div>
                        @if (Model.Students?.Any() ?? false)
                        {
                            <ul class="small text-muted mb-0 ps-4">
                                @foreach (var student in Model.Students.Take(3))
                                {
                                    <li>@student.FullName (@student.RollNumber)</li>
                                }
                                @if (Model.Students.Count > 3)
                                {
                                    <li>... and @(Model.Students.Count - 3) more</li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
