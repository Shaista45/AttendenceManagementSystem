@model AttendenceManagementSystem.Models.Section

<form id="quickAddSectionForm" asp-action="QuickAddSection" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="batchId" value="@ViewBag.BatchId" />

    <div class="alert alert-info">
        Adding a new section to Batch <strong>@ViewBag.BatchYear</strong>.
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Section Name <span class="text-danger">*</span></label>
        <input type="text" id="name" name="name" class="form-control" placeholder="e.g., A, B1" required maxlength="10" />
        <div class="invalid-feedback">Please enter a section name.</div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add Section
        </button>
    </div>
</form>
