@*
IMPORTANT:
This view is loaded INSIDE an existing Bootstrap modal via AJAX.
It MUST NOT contain:
- .modal
- .modal-dialog
- .modal-content
- data-bs-dismiss attributes

Only modal-header, modal-body, modal-footer allowed.
Refactor accordingly.
*@
@model AttendenceManagementSystem.Models.Batch
<div class="modal-header">
    <h5 class="modal-title" id="addBatchModalLabel"><i class="fas fa-layer-group me-2"></i>Add New Batch</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="quickAddBatchForm" asp-action="QuickAddBatch" asp-controller="Admin" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="departmentId" value="@ViewBag.DepartmentId" />

        <div class="alert alert-info">
            Adding a new batch to the <strong>@ViewBag.DepartmentName</strong> department.
        </div>

        <div class="mb-3">
            <label for="year" class="form-label">Batch Year <span class="text-danger">*</span></label>
            <input type="number" id="year" name="year" class="form-control" placeholder="e.g., 2024" required min="2000" max="2100" />
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" id="description" name="description" class="form-control" placeholder="e.g., Fall 2024 Batch" />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="quickAddBatchForm">
        <i class="fas fa-plus me-2"></i>Add Batch
    </button>
</div>
