@model AttendenceManagementSystem.Models.Course
@{
    ViewData["Title"] = "Edit Course";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-book-open me-2"></i>Manage Course
            </h1>
            <p class="text-muted small mb-0">Update course curriculum and details</p>
        </div>
        <a class="btn btn-outline-secondary btn-sm shadow-sm bg-white" asp-action="Courses">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-xl-8">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h6 class="m-0 fw-bold">
                        <i class="fas fa-edit me-2"></i>Course Details
                    </h6>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-10">
                    <form asp-action="EditCourse" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />
                        
                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label asp-for="Code" class="form-label fw-bold small text-dark">Course Code <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-hashtag text-muted"></i></span>
                                    <input asp-for="Code" class="form-control border-start-0 ps-0 shadow-sm" placeholder="e.g. CS101" maxlength="20" />
                                </div>
                                <span asp-validation-for="Code" class="text-danger x-small"></span>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="Title" class="form-label fw-bold small text-dark">Course Title <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-heading text-muted"></i></span>
                                    <input asp-for="Title" class="form-control border-start-0 ps-0 shadow-sm" placeholder="e.g. Introduction to Computing" maxlength="100" />
                                </div>
                                <span asp-validation-for="Title" class="text-danger x-small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="DepartmentId" class="form-label fw-bold small text-dark">Department <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-building text-muted"></i></span>
                                    <select asp-for="DepartmentId" class="form-select border-start-0 ps-0 shadow-sm" asp-items="ViewBag.DepartmentId">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="DepartmentId" class="text-danger x-small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Credits" class="form-label fw-bold small text-dark">Credit Hours <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-clock text-muted"></i></span>
                                    <input asp-for="Credits" type="number" class="form-control border-start-0 ps-0 shadow-sm" placeholder="1-6" min="1" max="10" />
                                </div>
                                <span asp-validation-for="Credits" class="text-danger x-small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold small text-dark">Description</label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="5" placeholder="Enter a detailed course description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger x-small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-3 pt-3 border-top">
                            <a class="btn btn-light px-4 border" asp-action="Courses">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Metadata
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">Internal ID</span>
                            <span class="font-monospace">#@Model.Id</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">Created On</span>
                            <span>@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="text-muted">Last Updated</span>
                            <span>@(DateTime.Now.ToString("MMM dd, yyyy"))</span>
                        </li>
                    </ul>
                    
                    <div class="alert alert-warning d-flex align-items-start mt-3 mb-0 p-3 shadow-sm border-0">
                        <i class="fas fa-exclamation-triangle mt-1 me-3"></i>
                        <div>
                            <strong class="d-block mb-1">Warning</strong>
                            <small>Modifying critical details like <strong>Credit Hours</strong> or <strong>Code</strong> may affect existing transcripts and reports.</small>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Timetables != null || Model.Enrollments != null)
            {
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h6 class="m-0 fw-bold text-primary">
                            <i class="fas fa-chart-pie me-2"></i>Usage Statistics
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 text-center">
                            <div class="col-6">
                                <div class="p-3 border rounded bg-light">
                                    <div class="h4 mb-0 fw-bold text-primary">@(Model.Enrollments?.Count ?? 0)</div>
                                    <small class="text-muted text-uppercase x-small fw-bold">Active Enrollments</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 border rounded bg-light">
                                    <div class="h4 mb-0 fw-bold text-info">@(Model.Timetables?.Count ?? 0)</div>
                                    <small class="text-muted text-uppercase x-small fw-bold">Scheduled Classes</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <style>
        .input-group-text { border-color: #d1d3e2; }
        .form-control:focus, .form-select:focus, .form-control:focus + .input-group-text { 
            border-color: var(--uet-royal-blue); 
            box-shadow: 0 0 0 0.2rem rgba(0,0,102,0.15); 
        }
        .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    </style>
}