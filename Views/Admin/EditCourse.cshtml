@model AttendenceManagementSystem.Models.Course
@{
    ViewData["Title"] = "Edit Course";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit me-2"></i>Edit Course
        </h1>
        <a class="btn btn-secondary" asp-action="EditDepartments">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Course Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="EditCourse" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />
                        
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Course Code <span class="text-danger">*</span></label>
                            <input asp-for="Code" class="form-control" placeholder="Enter course code (e.g., CS101)" maxlength="20" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <small class="form-text text-muted">Enter a unique course code (e.g., CS101, MATH201)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Course Title <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter course title" maxlength="100" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartmentId" class="form-label">Department <span class="text-danger">*</span></label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Credits" class="form-label">Credits <span class="text-danger">*</span></label>
                            <input asp-for="Credits" type="number" class="form-control" placeholder="Enter course credits" min="1" max="10" />
                            <span asp-validation-for="Credits" class="text-danger"></span>
                            <small class="form-text text-muted">Enter the credit hours for this course (typically 1-6)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter course description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="form-text text-muted">Optional: Detailed description of the course content</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a class="btn btn-secondary" asp-action="Departments">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Information
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Course ID:</strong> @Model.Id</p>
                    <p class="mb-2"><strong>Department:</strong> @Model.Department?.Name</p>
                    <p class="mb-2"><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    <hr />
                    <p class="text-muted mb-0">
                        <i class="fas fa-exclamation-triangle text-warning me-1"></i>
                        Editing the course will affect all associated timetables, enrollments, and attendance records.
                    </p>
                </div>
            </div>

            @if (Model.Timetables != null || Model.Enrollments != null)
            {
                <div class="card shadow mt-3">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-chart-bar me-2"></i>Quick Stats
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <i class="fas fa-calendar-alt text-info me-2"></i>
                            <strong>Timetable Entries:</strong> @(Model.Timetables?.Count ?? 0)
                        </div>
                        <div class="mb-0">
                            <i class="fas fa-user-check text-success me-2"></i>
                            <strong>Enrollments:</strong> @(Model.Enrollments?.Count ?? 0)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
