@using Microsoft.AspNetCore.Identity
@using AttendenceManagementSystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown no-arrow">
            @{
                var fullName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value ?? User.Identity?.Name;
                var dashboardController = User.IsInRole("Admin") ? "Admin" : User.IsInRole("Teacher") ? "Teacher" : "Student";
            }
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="d-none d-lg-flex flex-column text-end me-2">
                    <span class="text-gray-800 small fw-bold">@fullName</span>
                </div>
                <div class="img-profile rounded-circle d-flex align-items-center justify-content-center bg-primary text-white shadow-sm" style="width: 35px; height: 35px;">
                     <i class="fas fa-user"></i>
                </div>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 animated--grow-in py-0" aria-labelledby="userDropdown">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user-circle fa-2x me-2 text-warning"></i>
                        <div>
                            <div class="small text-white-50">Signed in as</div>
                            <div class="fw-bold">@fullName</div>
                        </div>
                    </div>
                </div>
                <div class="p-2">
                    <li>
                        <a class="dropdown-item rounded py-2" asp-controller="@dashboardController" asp-action="Dashboard">
                            <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>
                            My Profile
                        </a>
                    </li>
                    <li><hr class="dropdown-divider my-2"></li>
                    <li>
                        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item rounded py-2 text-danger fw-bold">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw me-2"></i>
                                Logout
                            </button>
                        </form>
                    </li>
                </div>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
           <a class="btn btn-primary rounded-pill px-4 ms-2 shadow-sm fw-bold text-white d-flex align-items-center gap-2" 
                asp-controller="Account" asp-action="Register"
                style="background-color: #0044cc; border: none; transition: transform 0.2s;"
                onmouseover="this.style.transform='translateY(-2px)'" 
                onmouseout="this.style.transform='translateY(0)'">
                    <i class="fas fa-user-plus"></i> 
                    <span>Register</span>
           </a>
        </li>
        <li class="nav-item ms-2">
            <a class="btn btn-primary btn-sm px-4 py-2 shadow-sm" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i> Login
            </a>
        </li>
    }
</ul>