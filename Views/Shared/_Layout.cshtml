<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UET Attendance System</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container-fluid g-0">
        <div class="row g-0">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-md-3 col-lg-2 d-none d-md-block sidebar text-white">
                    <div class="sidebar-brand">
                        <div class="d-flex align-items-center justify-content-center mb-2">
                            <i class="fas fa-university fa-2x text-warning me-2"></i>
                            <h5 class="mb-0 fw-bold">UET AMS</h5>
                        </div>
                        <small class="opacity-75 d-block">Attendance Portal</small>
                    </div>

                    <div class="px-3 mb-4 text-center">
                        <div class="p-3 rounded bg-white bg-opacity-10">
                            <i class="fas fa-user-circle fa-2x mb-2 text-warning"></i>
                            <div class="fw-bold text-truncate">@User.Identity.Name</div>
                            <small class="text-white-50">
                                @(User.IsInRole("Admin") ? "Administrator" : User.IsInRole("Teacher") ? "Faculty" : "Student")
                            </small>
                        </div>
                    </div>
                    
                    <ul class="nav flex-column px-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Departments" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Departments">
                                    <i class="fas fa-building"></i>Departments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Students" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Students">
                                    <i class="fas fa-user-graduate"></i>Students
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Teachers" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Teachers">
                                    <i class="fas fa-chalkboard-teacher"></i>Teachers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reports" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Reports">
                                    <i class="fas fa-chart-pie"></i>Reports
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")" 
                                   asp-controller="Teacher" asp-action="Dashboard">
                                    <i class="fas fa-home"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MarkAttendance" ? "active" : "")" 
                                   asp-controller="Teacher" asp-action="MarkAttendance">
                                    <i class="fas fa-check-circle"></i>Mark Attendance
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyTimetable" ? "active" : "")" 
                                   asp-controller="Teacher" asp-action="MyTimetable">
                                    <i class="fas fa-calendar-alt"></i>My Timetable
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "StudentSummary" ? "active" : "")" 
                                   asp-controller="Teacher" asp-action="StudentSummary">
                                    <i class="fas fa-users"></i>Students
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")" 
                                   asp-controller="Student" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyAttendance" ? "active" : "")" 
                                   asp-controller="Student" asp-action="MyAttendance">
                                    <i class="fas fa-clipboard-list"></i>Attendance
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "RegisterSubjects" ? "active" : "")" 
                                   asp-controller="Student" asp-action="RegisterSubjects">
                                    <i class="fas fa-book"></i>Subjects
                                </a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyTimetable" ? "active" : "")" 
                                   asp-controller="Student" asp-action="MyTimetable">
                                    <i class="fas fa-clock"></i>Timetable
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }

            <div class="@(User.Identity.IsAuthenticated ? "col-md-9 col-lg-10" : "col-12") d-flex flex-column min-vh-100">
                
                <nav class="navbar navbar-expand bg-white topbar mb-4 static-top shadow-sm px-4">
                     @if (User.Identity.IsAuthenticated)
                    {
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                    }

                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Logo" style="height: 35px; width: auto;" class="me-2" />
                        <span class="d-none d-sm-inline">Attendance System</span>
                    </a>

                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </nav>

                <main class="flex-grow-1 px-4 pb-5">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-@(TempData["MessageType"] ?? "success") alert-dismissible fade show shadow-sm" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas @((TempData["MessageType"]?.ToString() == "error" ? "fa-exclamation-triangle" : "fa-check-circle")) me-2 fa-lg"></i>
                                <div>@TempData["Message"]</div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @RenderBody()
                </main>

                <footer class="bg-white py-3 mt-auto border-top">
                    <div class="container-fluid text-center">
                        <span class="text-muted small">
                            &copy; @DateTime.Now.Year - University of Engineering & Technology. All Rights Reserved.
                        </span>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>