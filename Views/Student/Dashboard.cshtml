@model dynamic
@{
    ViewData["Title"] = "Student Dashboard";
    var student = ViewData["Student"] as dynamic;
}

<style>
    :root {
        --primary-blue: #0044cc;
        --dark-blue: #001a4d;
        --accent-gold: #ffc107;
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }

    .animate-up {
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
    }

    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    .delay-400 { animation-delay: 0.4s; }

    .hero-card {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--dark-blue) 100%);
        border-radius: 20px;
        border: none;
        box-shadow: 0 15px 35px rgba(0, 68, 204, 0.15);
    }

    .stat-card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 15px;
        background: #fff;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.08) !important;
    }

    .quick-action-card {
        transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
        border: 1px solid rgba(0,0,0,0.05);
    }

    .quick-action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.08);
        border-color: var(--primary-blue);
    }

    .icon-box-float {
        animation: float 6s ease-in-out infinite;
    }

    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .text-gray-800 { color: #2c3e50; }
</style>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3 animate-up">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-user-graduate me-2"></i>Student Dashboard
            </h1>
            <p class="text-muted small mb-0">Welcome back! Track your academic progress and attendance</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary shadow-sm fw-bold" asp-controller="Student" asp-action="AutoMark">
                <i class="fas fa-check-circle me-2"></i>Mark Attendance
            </a>
            <a class="btn btn-outline-primary shadow-sm bg-white fw-bold" asp-controller="Student" asp-action="RegisterSubjects">
                <i class="fas fa-book me-2"></i>Register Subjects
            </a>
        </div>
    </div>

    <div class="row mb-4 animate-up delay-100">
        <div class="col-12">
            <div class="card hero-card text-white overflow-hidden position-relative">
                <div class="position-absolute top-0 end-0 rounded-circle" 
                     style="width: 300px; height: 300px; transform: translate(30%, -30%); background: rgba(255, 255, 255, 0.1);">
                </div>
                
                <div class="card-body p-4 position-relative z-1">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="card-title fw-bold mb-3">Welcome back, @student?.FullName!</h4>
                            <div class="d-flex flex-wrap gap-3 text-white-50">
                                <span class="d-flex align-items-center bg-white bg-opacity-10 px-3 py-1 rounded-pill">
                                    <i class="fas fa-id-card me-2 text-warning"></i>
                                    @student?.RollNumber
                                </span>
                                <span class="d-flex align-items-center bg-white bg-opacity-10 px-3 py-1 rounded-pill">
                                    <i class="fas fa-building me-2 text-info"></i>
                                    @(student?.Department?.Name ?? "N/A")
                                </span>
                                <span class="d-flex align-items-center bg-white bg-opacity-10 px-3 py-1 rounded-pill">
                                    <i class="fas fa-layer-group me-2 text-success"></i>
                                    Batch @(student?.Batch?.Year ?? "-"), Sec @(student?.Section?.Name ?? "-")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4 text-center d-none d-md-block icon-box-float">
                            <i class="fas fa-user-graduate fa-5x text-white opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4 animate-up delay-200">
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 border-start border-4 border-primary shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-primary fw-bold x-small mb-1">Total Courses</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TotalCourses</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                <i class="fas fa-book fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 border-start border-4 border-success shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-success fw-bold x-small mb-1">Today Present</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TodayPresent <span class="text-muted small fw-normal">/ @Model.TotalCourses</span></div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                <i class="fas fa-calendar-check fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 border-start border-4 border-info shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-info fw-bold x-small mb-1">Attendance Rate</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.OverallPercentage.ToString("F1")%</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                                <i class="fas fa-chart-pie fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 border-start border-4 border-warning shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-warning fw-bold x-small mb-1">Current Status</div>
                            <div class="h6 mb-0 fw-bold text-gray-800 text-truncate" title="@(Model.CurrentClass ?? "Free Time")">
                                @(Model.CurrentClass ?? "Free Time")
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                                <i class="fas fa-clock fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4 animate-up delay-200">
        <div class="col-12">
            <h6 class="fw-bold text-primary mb-3"><i class="fas fa-bolt me-2"></i>Quick Actions</h6>
        </div>
        
        <div class="col-6 col-md-3">
            <a class="card quick-action-card h-100 text-decoration-none text-center p-3 bg-white" 
               asp-controller="Student" asp-action="MyAttendance">
                <div class="card-body d-flex flex-column align-items-center justify-content-center p-2">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary mb-3">
                        <i class="fas fa-clipboard-list fa-lg"></i>
                    </div>
                    <h6 class="fw-bold text-dark mb-0">My Attendance</h6>
                    <small class="text-muted">View History</small>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a class="card quick-action-card h-100 text-decoration-none text-center p-3 bg-white" 
               asp-controller="Student" asp-action="AttendanceSummary">
                <div class="card-body d-flex flex-column align-items-center justify-content-center p-2">
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success mb-3">
                        <i class="fas fa-chart-bar fa-lg"></i>
                    </div>
                    <h6 class="fw-bold text-dark mb-0">Summary</h6>
                    <small class="text-muted">Performance Stats</small>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a class="card quick-action-card h-100 text-decoration-none text-center p-3 bg-white" 
               asp-controller="Student" asp-action="RegisterSubjects">
                <div class="card-body d-flex flex-column align-items-center justify-content-center p-2">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning mb-3">
                        <i class="fas fa-book-open fa-lg"></i>
                    </div>
                    <h6 class="fw-bold text-dark mb-0">Subjects</h6>
                    <small class="text-muted">Manage Courses</small>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a class="card quick-action-card h-100 text-decoration-none text-center p-3 bg-white" 
               asp-controller="Student" asp-action="MyTimetable">
                <div class="card-body d-flex flex-column align-items-center justify-content-center p-2">
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info mb-3">
                        <i class="fas fa-calendar-alt fa-lg"></i>
                    </div>
                    <h6 class="fw-bold text-dark mb-0">Timetable</h6>
                    <small class="text-muted">Weekly Schedule</small>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4 animate-up delay-300">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4 h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-calendar-day me-2"></i>Today's Schedule
                    </h6>
                    <span class="badge bg-light text-primary border">@DateTime.Now.DayOfWeek, @DateTime.Now.ToString("MMM dd")</span>
                </div>
                <div class="card-body p-0">
                    @if (ViewData["TodaySchedule"] is List<AttendenceManagementSystem.Models.Timetable> schedule && schedule.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var item in schedule)
                            {
                                var now = DateTime.Now.TimeOfDay;
                                var isCurrent = now >= item.StartTime && now <= item.EndTime;
                                var isPast = now > item.EndTime;
                                var statusClass = isCurrent ? "bg-primary bg-opacity-10 border-start border-4 border-primary" : "";
                                
                                <div class="list-group-item p-3 @statusClass">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3 text-center" style="min-width: 80px;">
                                                <div class="fw-bold text-dark">@DateTime.Today.Add(item.StartTime).ToString("hh:mm tt")</div>
                                                <small class="text-muted">@DateTime.Today.Add(item.EndTime).ToString("hh:mm tt")</small>
                                            </div>
                                            <div class="vr mx-2"></div>
                                            <div class="ms-2">
                                                <h6 class="mb-1 fw-bold text-dark">@item.Course?.Title</h6>
                                                <small class="text-muted d-block">
                                                    <i class="fas fa-chalkboard-teacher me-1"></i> 
                                                    @(item.Teacher?.FullName ?? "TBA")
                                                </small>
                                            </div>
                                        </div>
                                        
                                        <div>
                                            @if (isCurrent)
                                            {
                                                <span class="badge bg-success rounded-pill px-3">Now</span>
                                            }
                                            else if (!isPast)
                                            {
                                                <span class="badge bg-light text-dark border rounded-pill px-3">Upcoming</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary bg-opacity-25 text-secondary rounded-pill px-3">Done</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <div class="mb-3">
                                <i class="fas fa-mug-hot fa-3x opacity-25"></i>
                            </div>
                            <h6 class="fw-bold">No classes today</h6>
                            <p class="small mb-0">Enjoy your free time!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-chart-line me-2"></i>Attendance Overview
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewData["AttendancePercentage"] != null)
                    {
                        var percentages = (Dictionary<int, double>)ViewData["AttendancePercentage"];
                        if (percentages.Any())
                        {
                            <div class="vstack gap-3">
                                @foreach (var (courseId, percentage) in percentages.Take(5))
                                {
                                    <div>
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="small fw-bold text-dark">Course @courseId</span>
                                            <span class="small fw-bold @(percentage >= 75 ? "text-success" : percentage >= 60 ? "text-warning" : "text-danger")">
                                                @percentage.ToString("F0")%
                                            </span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar @(percentage >= 75 ? "bg-success" : percentage >= 60 ? "bg-warning" : "bg-danger")" 
                                                 role="progressbar" style="width: @percentage%"></div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (percentages.Count > 5)
                            {
                                <div class="text-center mt-3 pt-2 border-top">
                                    <a asp-action="AttendanceSummary" class="text-decoration-none small fw-bold">View All Courses</a>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text-muted small mb-0">No attendance data yet.</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>