@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center">
                    <h2 class="text-success mb-3"><i class="fas fa-check-circle"></i> Check Your Email</h2>
                    <p class="lead">
                        Please check your email to reset your password.
                    </p>
                    <p class="text-muted small">
                        (Note: Since this is a dev environment, check your <strong>Visual Studio Output Console</strong> for the link)
                    </p>
                    <a asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>