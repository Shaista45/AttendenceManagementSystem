@model AttendenceManagementSystem.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-light my-4">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Register" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Role Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Register As <span class="text-danger">*</span></label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Role" id="roleStudent" value="Student" checked />
                                        <label class="form-check-label" for="roleStudent">
                                            <i class="fas fa-user-graduate me-2"></i>Student
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Role" id="roleTeacher" value="Teacher" />
                                        <label class="form-check-label" for="roleTeacher">
                                            <i class="fas fa-chalkboard-teacher me-2"></i>Teacher
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="mb-4" />

                        <!-- Common Fields -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                                    <label asp-for="FullName">Full Name <span class="text-danger">*</span></label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                    <label asp-for="Email">Email address <span class="text-danger">*</span></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                                    <label asp-for="Password">Password <span class="text-danger">*</span></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="text-muted">At least 6 characters</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                                    <label asp-for="ConfirmPassword">Confirm Password <span class="text-danger">*</span></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="DepartmentId" class="form-select" id="departmentSelect" asp-items="@(ViewData["Departments"] as SelectList)">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <label asp-for="DepartmentId">Department <span class="text-danger">*</span></label>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <label asp-for="PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Student-Specific Fields -->
                        <div id="studentFields">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-user-graduate me-2"></i>Student Information
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="RollNumber" class="form-control" placeholder="Enter roll number (optional)" />
                                        <label asp-for="RollNumber">Roll Number (Optional)</label>
                                        <span asp-validation-for="RollNumber" class="text-danger"></span>
                                        <small class="text-muted">Leave blank to auto-generate</small>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="BatchId" class="form-select" id="batchSelect">
                                            <option value="">-- Select Batch/Session --</option>
                                        </select>
                                        <label asp-for="BatchId">Batch/Session <span class="text-danger">*</span></label>
                                        <span asp-validation-for="BatchId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="SectionId" class="form-select" id="sectionSelect">
                                            <option value="">-- Select Section --</option>
                                        </select>
                                        <label asp-for="SectionId">Section <span class="text-danger">*</span></label>
                                        <span asp-validation-for="SectionId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Teacher-Specific Fields -->
                        <div id="teacherFields" style="display: none;">
                            <h5 class="text-info mb-3">
                                <i class="fas fa-chalkboard-teacher me-2"></i>Teacher Information
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="EmployeeId" class="form-control" placeholder="Employee ID" />
                                        <label asp-for="EmployeeId">Employee ID <span class="text-danger">*</span></label>
                                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Note:</strong> Teacher accounts require admin approval before you can login. You will receive a notification once your account is approved.
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-lg" id="registerBtn" style="background-color: #28a745; color: white;">
                                <i class="fas fa-user-plus me-2"></i>Register
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a href="@Url.Action("Login", "Account")">Already have an account? Sign in!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Handle role selection
            $('input[name="Role"]').on('change', function() {
                var selectedRole = $(this).val();
                
                if (selectedRole === 'Student') {
                    $('#studentFields').show();
                    $('#teacherFields').hide();
                    $('#registerBtn').css('background-color', '#28a745');
                    $('.card-header').removeClass('bg-info').addClass('bg-success');
                    $('.card-header h3 i').removeClass('fa-chalkboard-teacher').addClass('fa-user-graduate');
                } else {
                    $('#studentFields').hide();
                    $('#teacherFields').show();
                    $('#registerBtn').css('background-color', '#17a2b8');
                    $('.card-header').removeClass('bg-success').addClass('bg-info');
                    $('.card-header h3 i').removeClass('fa-user-graduate').addClass('fa-chalkboard-teacher');
                }
            });

            // Load batches when department is selected
            $('#departmentSelect').on('change', function() {
                var departmentId = $(this).val();
                var batchSelect = $('#batchSelect');
                var sectionSelect = $('#sectionSelect');
                
                // Clear batch and section dropdowns
                batchSelect.html('<option value="">-- Select Batch/Session --</option>');
                sectionSelect.html('<option value="">-- Select Section --</option>');
                
                if (departmentId) {
                    $.ajax({
                        url: '@Url.Action("GetBatchesByDepartment", "Admin")',
                        type: 'GET',
                        data: { departmentId: departmentId },
                        success: function(batches) {
                            $.each(batches, function(i, batch) {
                                batchSelect.append($('<option></option>').val(batch.id).html(batch.year));
                            });
                        },
                        error: function() {
                            alert('Error loading batches. Please try again.');
                        }
                    });
                }
            });

            // Load sections when batch is selected
            $('#batchSelect').on('change', function() {
                var batchId = $(this).val();
                var sectionSelect = $('#sectionSelect');
                
                // Clear section dropdown
                sectionSelect.html('<option value="">-- Select Section --</option>');
                
                if (batchId) {
                    $.ajax({
                        url: '@Url.Action("GetSectionsByBatch", "Admin")',
                        type: 'GET',
                        data: { batchId: batchId },
                        success: function(sections) {
                            $.each(sections, function(i, section) {
                                sectionSelect.append($('<option></option>').val(section.id).html(section.name));
                            });
                        },
                        error: function() {
                            alert('Error loading sections. Please try again.');
                        }
                    });
                }
            });

            // Form submission handling
            $('#registerForm').on('submit', function(e) {
                var selectedRole = $('input[name="Role"]:checked').val();
                
                if (selectedRole === 'Student') {
                    var departmentId = $('#departmentSelect').val();
                    var batchId = $('#batchSelect').val();
                    var sectionId = $('#sectionSelect').val();
                    
                    if (!departmentId || !batchId || !sectionId) {
                        e.preventDefault();
                        alert('Please select Department, Batch, and Section.');
                        return false;
                    }
                } else if (selectedRole === 'Teacher') {
                    var departmentId = $('#departmentSelect').val();
                    var employeeId = $('#EmployeeId').val();
                    
                    if (!departmentId || !employeeId) {
                        e.preventDefault();
                        alert('Please select Department and enter Employee ID.');
                        return false;
                    }
                }
                
                // Disable button to prevent double submission
                $('#registerBtn').prop('disabled', true)
                    .html('<i class="fas fa-spinner fa-spin me-2"></i>Registering...');
                
                return true;
            });
        });
    </script>
}
