@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="fas fa-lock fa-4x text-danger mb-4"></i>
                    <h2 class="text-danger mb-3">Access Denied</h2>
                    <p class="text-muted mb-4">
                        You do not have permission to access this page.
                    </p>
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        This page is restricted to authorized users only.
                    </div>
                    <div class="mt-4">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go to Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Teacher"))
                        {
                            <a asp-controller="Teacher" asp-action="Dashboard" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go to Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <a asp-controller="Student" asp-action="Dashboard" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go to Dashboard
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go to Home
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
