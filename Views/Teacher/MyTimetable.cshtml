@using AttendenceManagementSystem.Models
@model Dictionary<DayOfWeek, List<Timetable>>

@{
    ViewData["Title"] = "My Timetable";
    // Order days to start with Monday standard academic week
    var days = new[] { DayOfWeek.Monday, DayOfWeek.Tuesday, DayOfWeek.Wednesday, DayOfWeek.Thursday, DayOfWeek.Friday, DayOfWeek.Saturday };
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-calendar-alt me-2"></i>My Teaching Schedule
            </h1>
            <p class="text-muted small mb-0">Weekly overview of your assigned lectures and labs</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary btn-sm shadow-sm px-3">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="row g-4">
        @foreach (var day in days)
        {
            var hasClasses = Model.ContainsKey(day) && Model[day].Any();
            // Styling logic: Active days pop out, empty days recede
            var cardBorderClass = hasClasses ? "border-top-primary shadow-sm" : "border-light bg-light bg-opacity-50";
            var headerClass = hasClasses ? "bg-white text-primary" : "bg-transparent text-muted";
            var headerBorder = hasClasses ? "border-bottom" : "";
            
            <div class="col-xl-4 col-md-6">
                <div class="card h-100 border-0 rounded-3 overflow-hidden shadow-hover transition-all @cardBorderClass">
                    
                    <div class="card-header py-3 d-flex justify-content-between align-items-center @headerClass @headerBorder">
                        <div class="d-flex align-items-center">
                            <span class="fw-bold text-uppercase letter-spacing-1">@day</span>
                            @if (day == DateTime.Today.DayOfWeek)
                            {
                                <span class="badge bg-primary ms-2 x-small">TODAY</span>
                            }
                        </div>
                        @if (hasClasses)
                        {
                            <span class="badge bg-warning text-dark rounded-pill shadow-sm">
                                @Model[day].Count <span class="d-none d-sm-inline">Classes</span>
                            </span>
                        }
                    </div>
                    
                    <div class="card-body p-0">
                        @if (hasClasses)
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var classSession in Model[day].OrderBy(t => t.StartTime))
                                {
                                    <div class="list-group-item border-0 border-bottom p-3 list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="me-2">
                                                <span class="badge bg-primary bg-opacity-10 text-primary mb-2 font-monospace">
                                                    <i class="far fa-clock me-1"></i>
                                                    @DateTime.Today.Add(classSession.StartTime).ToString("hh:mm tt") - 
                                                    @DateTime.Today.Add(classSession.EndTime).ToString("hh:mm tt")
                                                </span>
                                                <h6 class="fw-bold text-dark mb-0">@classSession.Course?.Code</h6>
                                            </div>
                                            
                                            <a asp-action="MarkAttendance" 
                                               asp-route-batchId="@classSession.BatchId"
                                               asp-route-sectionId="@classSession.SectionId"
                                               asp-route-courseId="@classSession.CourseId"
                                               asp-route-date="@DateTime.Now.ToString("yyyy-MM-dd")"
                                               class="btn btn-icon btn-light text-primary rounded-circle shadow-sm"
                                               data-bs-toggle="tooltip" 
                                               title="Mark Attendance">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </div>
                                        
                                        <p class="mb-2 text-muted small text-truncate fw-medium" title="@classSession.Course?.Title">
                                            @classSession.Course?.Title
                                        </p>
                                        
                                        <div class="d-flex align-items-center text-muted x-small bg-light rounded p-2 mt-2">
                                            <div class="d-flex align-items-center me-3">
                                                <i class="fas fa-layer-group me-2 text-info"></i>
                                                <span class="fw-semibold">Batch @classSession.Batch?.Year</span>
                                            </div>
                                            <div class="vr mx-2"></div>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-users me-2 text-info"></i>
                                                <span class="fw-semibold">Sec @classSession.Section?.Name</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 d-flex flex-column align-items-center justify-content-center h-100">
                                <div class="mb-3 text-muted opacity-25">
                                    <i class="fas fa-calendar-day fa-3x"></i>
                                </div>
                                <h6 class="text-muted fw-bold">Free Day</h6>
                                <p class="text-muted x-small mb-0 opacity-75">No lectures scheduled</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .border-top-primary { border-top: 4px solid var(--uet-royal-blue) !important; }
    .letter-spacing-1 { letter-spacing: 1px; }
    .x-small { font-size: 0.75rem; }
    .btn-icon { width: 32px; height: 32px; padding: 0; display: inline-flex; align-items: center; justify-content: center; }
    .shadow-hover:hover { transform: translateY(-5px); box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.08) !important; z-index: 10; }
    .transition-all { transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1); }
</style>