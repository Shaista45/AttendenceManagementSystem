@model dynamic
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-0 fw-bold text-primary">
                <i class="fas fa-chalkboard-teacher me-2"></i>Faculty Dashboard
            </h1>
            <p class="text-muted small mb-0">Overview of your academic activities and student performance</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-primary shadow-sm" asp-controller="Teacher" asp-action="MarkAttendance">
                <i class="fas fa-edit me-2"></i>Mark Attendance
            </a>
            <a class="btn btn-outline-primary shadow-sm bg-white" asp-controller="Teacher" asp-action="MyTimetable">
                <i class="fas fa-calendar-alt me-2"></i>Timetable
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-primary shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-primary fw-bold x-small mb-1">Assigned Courses</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.AssignedCourses</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                <i class="fas fa-book fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-success shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-success fw-bold x-small mb-1">Today's Attendance</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TodayAttendanceMarked</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                <i class="fas fa-check-circle fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-info shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-info fw-bold x-small mb-1">Total Students</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">@Model.TotalStudents</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                                <i class="fas fa-users fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card h-100 border-start border-4 border-warning shadow-sm py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col me-2">
                            <div class="text-uppercase text-warning text-dark fw-bold x-small mb-1">This Week's Classes</div>
                            <div class="h4 mb-0 fw-bold text-gray-800">8</div>
                        </div>
                        <div class="col-auto">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning text-dark">
                                <i class="fas fa-clock fa-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body bg-light bg-opacity-50">
                    <div class="row g-3">
                        <div class="col-sm-6 col-md-3">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Teacher" asp-action="MarkAttendance">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-primary bg-opacity-10 text-primary">
                                        <i class="fas fa-edit fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Mark Attendance</span>
                                </div>
                            </a>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Teacher" asp-action="MyTimetable">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-info bg-opacity-10 text-info">
                                        <i class="fas fa-calendar-alt fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">My Timetable</span>
                                </div>
                            </a>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Teacher" asp-action="AttendanceHistory">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-success bg-opacity-10 text-success">
                                        <i class="fas fa-history fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">View History</span>
                                </div>
                            </a>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <a class="card h-100 border-0 shadow-hover text-decoration-none action-tile"
                               asp-controller="Teacher" asp-action="StudentSummary">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                                    <div class="mb-3 p-3 rounded-circle bg-warning bg-opacity-10 text-warning text-dark">
                                        <i class="fas fa-chart-pie fa-2x"></i>
                                    </div>
                                    <span class="fw-bold text-dark small">Student Reports</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-calendar-day me-2"></i>Today's Schedule
                    </h6>
                    <small class="text-muted">@DateTime.Now.ToString("dddd, MMM dd")</small>
                </div>
                <div class="card-body">
                    <div class="text-center py-5 text-muted">
                         <div class="mb-3 opacity-25">
                            <i class="fas fa-mug-hot fa-3x"></i>
                         </div>
                         <h6 class="fw-bold">No Classes Left Today</h6>
                         <p class="small mb-0">You're all caught up! Check "My Timetable" for upcoming sessions.</p>
                         <a asp-action="MyTimetable" class="btn btn-sm btn-outline-primary mt-3">View Full Schedule</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-hourglass-half me-2"></i>Up Next
                    </h6>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-3 position-relative d-inline-block">
                        <i class="fas fa-chalkboard fa-4x text-gray-200"></i>
                        <i class="fas fa-clock fa-2x text-primary position-absolute bottom-0 end-0"></i>
                    </div>
                    <h5 class="fw-bold mt-3">Next Class</h5>
                    <p class="text-muted small">Consult your timetable for room and batch details.</p>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>Attendance Rate
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-4 fw-bold text-success mb-1">85%</div>
                        <small class="text-uppercase text-muted fw-bold x-small">Average Attendance (30 Days)</small>
                    </div>
                    
                    <div class="progress mb-2" style="height: 8px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-between text-muted x-small">
                        <span>0%</span>
                        <span>Target: 75%</span>
                        <span>100%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; letter-spacing: 0.05em; }
    .action-tile { transition: transform 0.2s ease, box-shadow 0.2s ease; background: #fff; }
    .action-tile:hover { transform: translateY(-5px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.1) !important; z-index: 5; }
    .shadow-hover { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
    .text-gray-200 { color: #eaecf4 !important; }
</style>