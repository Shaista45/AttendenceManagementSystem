@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section bg-primary text-white py-5 rounded-3 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4"> 
                    <i class="fas fa-calendar-check me-3"></i>Attendance Management System
                </h1>
                <p class="lead mb-4">
                    Streamline your university attendance tracking with our comprehensive management system. 
                    Designed for administrators, teachers, and students with role-based access and real-time reporting.
                </p>
                
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a class="btn btn-light btn-lg px-4 me-md-2" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                        <a class="btn btn-outline-light btn-lg px-4" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-light btn-lg px-4 me-md-2" asp-controller="Admin" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Teacher"))
                        {
                            <a class="btn btn-light btn-lg px-4 me-md-2" asp-controller="Teacher" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>Teacher Dashboard
                            </a>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <a class="btn btn-light btn-lg px-4 me-md-2" asp-controller="Student" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>Student Dashboard
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://via.placeholder.com/500x300/ffffff/667eea?text=Attendance+System" 
                     alt="Attendance System" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="fw-bold mb-4">Why Choose Our System?</h2>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-user-shield fa-2x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Admin Access</h5>
                    <p class="card-text text-muted">
                        Manage departments, courses, teachers, and students. Generate comprehensive reports and maintain complete control over the system.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-chalkboard-teacher fa-2x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Teacher Portal</h5>
                    <p class="card-text text-muted">
                        Mark attendance, view student records, track class performance, and generate attendance reports with ease.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-circle mx-auto mb-4" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-user-graduate fa-2x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Student Dashboard</h5>
                    <p class="card-text text-muted">
                        View attendance history, check timetable, download reports, and track your academic progress in real-time.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow">
                <div class="card-body p-5">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <h3 class="fw-bold mb-3">Ready to Get Started?</h3>
                            <p class="text-muted mb-4">
                                Join thousands of educational institutions that trust our Attendance Management System 
                                to streamline their academic processes and improve student engagement.
                            </p>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-rocket me-2"></i>Get Started Today
                                </a>
                            }
                        </div>
                        <div class="col-lg-4 text-center">
                            <i class="fas fa-graduation-cap fa-6x text-primary opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>